@model IEnumerable<proyecto_mejoradoMy_pet.Models.TbPedido>

@{
    ViewData["Title"] = "Mis Pedidos";
    Layout = null;
    bool isAuthenticated = ViewBag.IsAuthenticated ?? false;
    string userType = ViewBag.UserType ?? "Dueño";
    string userName = ViewBag.UserName ?? "Usuario";
}

<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewData["Title"]</title>
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css" rel="stylesheet">
    <style>
        * {
            margin: 0;
            padding: 0;
            box-sizing: border-box;
        }

        body, html {
            height: 100%;
            overflow-x: hidden;
        }

        .pedidos-layout {
            display: flex;
            min-height: 100vh;
            font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
            background: #f8f9fa;
        }

        /* COMPACT SIDEBAR */
        .compact-sidebar {
            width: 280px;
            background: white;
            box-shadow: 2px 0 20px rgba(0, 0, 0, 0.1);
            position: fixed;
            height: 100vh;
            left: 0;
            top: 0;
            z-index: 1000;
            overflow-y: auto;
            transition: transform 0.3s ease;
        }

        .sidebar-content {
            padding: 30px 20px;
            height: 100%;
            display: flex;
            flex-direction: column;
        }

        .sidebar-header {
            text-align: center;
            margin-bottom: 30px;
            padding-bottom: 20px;
            border-bottom: 2px solid #f0f0f0;
        }

        .logo-mini {
            width: 60px;
            height: 60px;
            background: linear-gradient(135deg, #4CAF50, #2E7D32);
            border-radius: 15px;
            display: flex;
            align-items: center;
            justify-content: center;
            margin: 0 auto 15px;
            box-shadow: 0 5px 15px rgba(76, 175, 80, 0.3);
        }

        .paw-icon {
            color: white;
            font-size: 30px;
        }

        .user-greeting h4 {
            color: #333;
            margin: 0 0 5px 0;
            font-size: 18px;
        }

        .user-type {
            color: #4CAF50;
            font-size: 13px;
            font-weight: 600;
        }

        .quick-nav {
            margin-bottom: 30px;
        }

        .nav-link {
            display: flex;
            align-items: center;
            padding: 12px 15px;
            margin-bottom: 8px;
            color: #666;
            text-decoration: none;
            border-radius: 12px;
            transition: all 0.3s ease;
            font-size: 15px;
        }

            .nav-link:hover {
                background: #f0f8ff;
                color: #667eea;
                transform: translateX(3px);
            }

            .nav-link.active {
                background: linear-gradient(135deg, #667eea, #764ba2);
                color: white;
            }

        .nav-icon {
            width: 40px;
            height: 40px;
            display: flex;
            align-items: center;
            justify-content: center;
            margin-right: 12px;
            background: #f8f9fa;
            border-radius: 10px;
            font-size: 16px;
        }

        .nav-link.active .nav-icon {
            background: rgba(255, 255, 255, 0.2);
            color: white;
        }

        .sidebar-footer {
            margin-top: auto;
            padding-top: 20px;
            border-top: 2px solid #f0f0f0;
        }

        .logout-btn {
            display: flex;
            align-items: center;
            justify-content: center;
            gap: 8px;
            padding: 12px;
            color: #dc3545;
            text-decoration: none;
            border-radius: 12px;
            transition: all 0.3s ease;
            font-size: 14px;
            border: 2px solid #f8d7da;
            background: transparent;
            width: 100%;
            cursor: pointer;
        }

            .logout-btn:hover {
                background: #f8d7da;
                transform: translateY(-2px);
            }

        /* MAIN CONTENT */
        .main-content {
            flex: 1;
            transition: margin-left 0.3s ease;
            margin-left: 280px;
        }

        .page-container {
            max-width: 1200px;
            margin: 0 auto;
            padding: 40px 20px;
        }

        .page-header {
            margin-bottom: 40px;
        }

        .page-title {
            font-size: 36px;
            font-weight: 700;
            color: #2d3748;
            margin-bottom: 10px;
        }

        .page-subtitle {
            font-size: 16px;
            color: #718096;
        }

        /* Tarjetas de Pedidos */
        .pedidos-grid {
            display: grid;
            gap: 25px;
        }

        .pedido-card {
            background: white;
            border-radius: 15px;
            box-shadow: 0 2px 15px rgba(0, 0, 0, 0.08);
            padding: 30px;
            transition: transform 0.3s ease, box-shadow 0.3s ease;
        }

            .pedido-card:hover {
                transform: translateY(-5px);
                box-shadow: 0 8px 25px rgba(0, 0, 0, 0.12);
            }

        .pedido-header {
            display: flex;
            justify-content: space-between;
            align-items: start;
            margin-bottom: 25px;
            padding-bottom: 20px;
            border-bottom: 2px solid #f7fafc;
        }

        .pedido-info {
            flex: 1;
        }

        .pedido-id {
            font-size: 14px;
            color: #a0aec0;
            margin-bottom: 8px;
            font-weight: 500;
        }

        .pedido-fecha {
            font-size: 28px;
            font-weight: 700;
            color: #2d3748;
            margin-bottom: 8px;
        }

        .pedido-hora {
            font-size: 16px;
            color: #718096;
            display: flex;
            align-items: center;
            gap: 8px;
        }

            .pedido-hora i {
                color: #667eea;
            }

        .pedido-estado {
            padding: 10px 20px;
            border-radius: 25px;
            font-size: 14px;
            font-weight: 600;
        }

        .estado-pendiente {
            background: #fef3c7;
            color: #92400e;
        }

        .estado-progreso {
            background: #dbeafe;
            color: #1e40af;
        }

        /* Sección del Prestador */
        .prestador-section {
            display: flex;
            align-items: center;
            justify-content: space-between;
            padding: 25px;
            background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
            border-radius: 15px;
            margin-bottom: 25px;
            color: white;
        }

        .prestador-info {
            display: flex;
            align-items: center;
            gap: 20px;
        }

        .prestador-avatar {
            width: 70px;
            height: 70px;
            border-radius: 50%;
            background: rgba(255,255,255,0.2);
            display: flex;
            align-items: center;
            justify-content: center;
            font-size: 28px;
            border: 3px solid rgba(255,255,255,0.3);
        }

        .prestador-datos h3 {
            font-size: 20px;
            font-weight: 600;
            margin-bottom: 8px;
        }

        .prestador-datos p {
            font-size: 14px;
            opacity: 0.9;
            display: flex;
            align-items: center;
            gap: 8px;
        }

        .quick-action-btn {
            background: white;
            color: #667eea;
            border: none;
            padding: 14px 28px;
            border-radius: 10px;
            font-weight: 600;
            cursor: pointer;
            display: flex;
            align-items: center;
            gap: 10px;
            transition: all 0.3s ease;
            font-size: 15px;
        }

            .quick-action-btn:hover {
                transform: scale(1.05);
                box-shadow: 0 6px 20px rgba(0,0,0,0.15);
            }

        /* Detalles del Pedido */
        .pedido-detalles {
            margin-top: 25px;
        }

        .detalle-item {
            display: flex;
            justify-content: space-between;
            align-items: center;
            padding: 15px 0;
            border-bottom: 1px solid #f7fafc;
        }

            .detalle-item:last-child {
                border-bottom: none;
            }

        .detalle-label {
            color: #718096;
            font-size: 15px;
            display: flex;
            align-items: center;
            gap: 10px;
        }

            .detalle-label i {
                color: #667eea;
                font-size: 16px;
            }

        .detalle-valor {
            color: #2d3748;
            font-weight: 600;
            font-size: 15px;
            text-align: right;
        }

        .pedido-total {
            margin-top: 20px;
            padding-top: 20px;
            border-top: 3px solid #e2e8f0;
            display: flex;
            justify-content: space-between;
            align-items: center;
        }

        .total-label {
            font-size: 20px;
            font-weight: 700;
            color: #2d3748;
        }

        .total-valor {
            font-size: 28px;
            font-weight: 700;
            color: #667eea;
        }

        .empty-state {
            text-align: center;
            padding: 80px 20px;
            background: white;
            border-radius: 15px;
            box-shadow: 0 2px 15px rgba(0, 0, 0, 0.08);
        }

            .empty-state i {
                font-size: 80px;
                color: #cbd5e0;
                margin-bottom: 25px;
            }

            .empty-state h3 {
                font-size: 24px;
                color: #2d3748;
                margin-bottom: 12px;
            }

            .empty-state p {
                color: #718096;
                font-size: 16px;
            }

        /* SIDEBAR TOGGLE BUTTON */
        .sidebar-toggle {
            display: none;
            position: fixed;
            bottom: 20px;
            left: 20px;
            width: 50px;
            height: 50px;
            background: linear-gradient(135deg, #667eea, #764ba2);
            color: white;
            border: none;
            border-radius: 50%;
            box-shadow: 0 5px 20px rgba(102, 126, 234, 0.4);
            cursor: pointer;
            z-index: 999;
            font-size: 20px;
        }

        /* RESPONSIVE */
        @@media (max-width: 768px) {
            .compact-sidebar

        {
            transform: translateX(-100%);
        }

        .compact-sidebar.active {
            transform: translateX(0);
        }

        .main-content {
            margin-left: 0;
        }

        .sidebar-toggle {
            display: flex;
            align-items: center;
            justify-content: center;
        }

        .page-title {
            font-size: 28px;
        }

        .pedido-header {
            flex-direction: column;
            gap: 15px;
        }

        .prestador-section {
            flex-direction: column;
            gap: 20px;
            text-align: center;
        }

        .prestador-info {
            flex-direction: column;
            text-align: center;
        }

        .quick-action-btn {
            width: 100%;
        }

        }
    </style>
</head>
<body>
    <div class="pedidos-layout">
        <!-- SIDEBAR -->
        <div class="compact-sidebar" id="sidebar">
            <div class="sidebar-content">
                <div class="sidebar-header">
                    <div class="logo-mini">
                        <div class="paw-icon">🐾</div>
                    </div>
                    <div class="user-greeting">
                        <h4>Hola, @userName</h4>
                        <span class="user-type">Dueño de Mascota</span>
                    </div>
                </div>

                <div class="quick-nav">
                    <a href="@Url.Action("Index", "Prestadores")" class="nav-link">
                        <div class="nav-icon">
                            <i class="fas fa-home"></i>
                        </div>
                        <span>Inicio</span>
                    </a>
                    <a href="@Url.Action("MisPedidos", "Pedidos")" class="nav-link active">
                        <div class="nav-icon">
                            <i class="fas fa-shopping-bag"></i>
                        </div>
                        <span>Mis Pedidos</span>
                    </a>
                    <a href="@Url.Action("Index", "Mascotas")" class="nav-link">
                        <div class="nav-icon">
                            <i class="fas fa-paw"></i>
                        </div>
                        <span>Mis Mascotas</span>
                    </a>
                </div>

                <div class="sidebar-footer">
                    <form method="post" action="/Autenticacion/Logout" style="margin: 0;">
                        <button type="submit" class="logout-btn">
                            <i class="fas fa-sign-out-alt"></i>
                            <span>Cerrar Sesión</span>
                        </button>
                    </form>
                </div>
            </div>
        </div>

        <!-- CONTENIDO PRINCIPAL -->
        <main class="main-content">
            <div class="page-container">
                <div class="page-header">
                    <h1 class="page-title">Mis Pedidos</h1>
                    <p class="page-subtitle">Aquí puedes ver todos tus pedidos en progreso y contactar a tus prestadores</p>
                </div>

                <div class="pedidos-grid">
                    @if (Model != null && Model.Any())
                    {
                        @foreach (var pedido in Model)
                        {
                            <div class="pedido-card">
                                <div class="pedido-header">
                                    <div class="pedido-info">
                                        <div class="pedido-id">Pedido #@pedido.IdPedido</div>
                                        <div class="pedido-fecha">@pedido.FechaServicio.ToString("dd MMM yyyy")</div>
                                        <div class="pedido-hora">
                                            <i class="fas fa-clock"></i>
                                            @pedido.HoraServicioFrom.ToString(@"hh\:mm") - @pedido.HoraServicioTo.ToString(@"hh\:mm")
                                        </div>
                                    </div>
                                    <span class="pedido-estado @(pedido.Estado == "Pendiente" ? "estado-pendiente" : "estado-progreso")">
                                        @pedido.Estado
                                    </span>
                                </div>

                                <!-- Sección del Prestador -->
                                <div class="prestador-section">
                                    <div class="prestador-info">
                                        <div class="prestador-avatar">
                                            <i class="fas fa-user"></i>
                                        </div>
                                        <div class="prestador-datos">
                                            <h3>@pedido.IdUsuarioPrestadorNavigation.PrimerNombre @pedido.IdUsuarioPrestadorNavigation.PrimerApellido</h3>
                                            <p>
                                                <i class="fas fa-phone"></i>
                                                @pedido.IdUsuarioPrestadorNavigation.Telefono
                                            </p>
                                        </div>
                                    </div>
                                    <button class="quick-action-btn" onclick="contactPrestador('@pedido.IdUsuarioPrestadorNavigation.Telefono')">
                                        <i class="fas fa-comment"></i>
                                        <span>Contactar</span>
                                    </button>
                                </div>

                                <!-- Detalles del Pedido -->
                                <div class="pedido-detalles">
                                    <div class="detalle-item">
                                        <span class="detalle-label">
                                            <i class="fas fa-map-marker-alt"></i>
                                            Dirección
                                        </span>
                                        <span class="detalle-valor">@pedido.IdDireccionNavigation.Direccion</span>
                                    </div>

                                    @if (pedido.TbPedidoMascota.Any())
                                    {
                                        <div class="detalle-item">
                                            <span class="detalle-label">
                                                <i class="fas fa-paw"></i>
                                                Mascotas
                                            </span>
                                            <span class="detalle-valor">
                                                @string.Join(", ", pedido.TbPedidoMascota.Select(pm => pm.IdMascotaNavigation.Nombre))
                                            </span>
                                        </div>
                                    }

                                    @if (pedido.TbDetallePedidos.Any())
                                    {
                                        <div class="detalle-item">
                                            <span class="detalle-label">
                                                <i class="fas fa-list"></i>
                                                Servicios
                                            </span>
                                            <span class="detalle-valor">
                                                @string.Join(", ", pedido.TbDetallePedidos.Select(d => d.IdServicioNavigation.Nombre))
                                            </span>
                                        </div>
                                    }
                                </div>

                                <!-- Total -->
                                <div class="pedido-total">
                                    <span class="total-label">Total</span>
                                    <span class="total-valor">$@pedido.Total.ToString("N0")</span>
                                </div>
                            </div>
                        }
                    }
                    else
                    {
                        <div class="empty-state">
                            <i class="fas fa-inbox"></i>
                            <h3>No tienes pedidos en progreso</h3>
                            <p>Cuando realices un pedido, aparecerá aquí</p>
                        </div>
                    }
                </div>
            </div>
        </main>
    </div>

    <!-- Botón para toggle sidebar en móviles -->
    <button class="sidebar-toggle" onclick="toggleSidebar()">
        <i class="fas fa-bars"></i>
    </button>

    <script>
        // Toggle sidebar en móviles
        function toggleSidebar() {
            const sidebar = document.getElementById('sidebar');
            sidebar.classList.toggle('active');
        }

        // Cerrar sidebar al hacer clic fuera en móviles
        document.addEventListener('click', function(event) {
            const sidebar = document.getElementById('sidebar');
            const toggleBtn = document.querySelector('.sidebar-toggle');

            if (window.innerWidth <= 768 && sidebar && toggleBtn) {
                if (!sidebar.contains(event.target) && !toggleBtn.contains(event.target)) {
                    sidebar.classList.remove('active');
                }
            }
        });

        // Función para contactar prestador por WhatsApp
        function contactPrestador(numero) {
            let url = "https://wa.me/+57" + numero;
            window.open(url, "_blank");
        }
    </script>
</body>
</html>