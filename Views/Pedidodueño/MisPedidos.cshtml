@model IEnumerable<proyecto_mejoradoMy_pet.Models.TbPedido>

@{
    ViewData["Title"] = "Mis Pedidos";
    Layout = null;
    bool isAuthenticated = ViewBag.IsAuthenticated ?? false;
    string userType = ViewBag.UserType ?? "Dueño";
    string userName = ViewBag.UserName ?? "Usuario";
}

<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewData["Title"]</title>
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css" rel="stylesheet">
    <style>
        * {
            margin: 0;
            padding: 0;
            box-sizing: border-box;
        }

        body, html {
            height: 100%;
            overflow-x: hidden;
        }

        .pedidos-layout {
            display: flex;
            min-height: 100vh;
            font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
            background: #f8f9fa;
        }

        /* COMPACT SIDEBAR */
        .compact-sidebar {
            width: 280px;
            background: white;
            box-shadow: 2px 0 20px rgba(0, 0, 0, 0.1);
            position: fixed;
            height: 100vh;
            left: 0;
            top: 0;
            z-index: 1000;
            overflow-y: auto;
            transition: transform 0.3s ease;
        }

        .sidebar-content {
            padding: 30px 20px;
            height: 100%;
            display: flex;
            flex-direction: column;
        }

        .sidebar-header {
            text-align: center;
            margin-bottom: 30px;
            padding-bottom: 20px;
            border-bottom: 2px solid #f0f0f0;
        }

        .logo-mini {
            width: 60px;
            height: 60px;
            background: linear-gradient(135deg, #4CAF50, #2E7D32);
            border-radius: 15px;
            display: flex;
            align-items: center;
            justify-content: center;
            margin: 0 auto 15px;
            box-shadow: 0 5px 15px rgba(76, 175, 80, 0.3);
        }

        .paw-icon {
            color: white;
            font-size: 30px;
        }

        .user-greeting h4 {
            color: #333;
            margin: 0 0 5px 0;
            font-size: 18px;
        }

        .user-type {
            color: #4CAF50;
            font-size: 13px;
            font-weight: 600;
        }

        .quick-nav {
            margin-bottom: 30px;
        }

        .nav-link {
            display: flex;
            align-items: center;
            padding: 12px 15px;
            margin-bottom: 8px;
            color: #666;
            text-decoration: none;
            border-radius: 12px;
            transition: all 0.3s ease;
            font-size: 15px;
        }

            .nav-link:hover {
                background: #f0f8ff;
                color: #667eea;
                transform: translateX(3px);
            }

            .nav-link.active {
                background: linear-gradient(135deg, #667eea, #764ba2);
                color: white;
            }

        .nav-icon {
            width: 40px;
            height: 40px;
            display: flex;
            align-items: center;
            justify-content: center;
            margin-right: 12px;
            background: #f8f9fa;
            border-radius: 10px;
            font-size: 16px;
        }

        .nav-link.active .nav-icon {
            background: rgba(255, 255, 255, 0.2);
            color: white;
        }

        .sidebar-footer {
            margin-top: auto;
            padding-top: 20px;
            border-top: 2px solid #f0f0f0;
        }

        .logout-btn {
            display: flex;
            align-items: center;
            justify-content: center;
            gap: 8px;
            padding: 12px;
            color: #dc3545;
            text-decoration: none;
            border-radius: 12px;
            transition: all 0.3s ease;
            font-size: 14px;
            border: 2px solid #f8d7da;
            background: transparent;
            width: 100%;
            cursor: pointer;
        }

            .logout-btn:hover {
                background: #f8d7da;
                transform: translateY(-2px);
            }

        /* MAIN CONTENT */
        .main-content {
            flex: 1;
            transition: margin-left 0.3s ease;
            margin-left: 280px;
        }

        .page-container {
            max-width: 1200px;
            margin: 0 auto;
            padding: 40px 20px;
        }

        .page-header {
            margin-bottom: 40px;
        }

        .page-title {
            font-size: 36px;
            font-weight: 700;
            color: #2d3748;
            margin-bottom: 10px;
        }

        .page-subtitle {
            font-size: 16px;
            color: #718096;
        }

        /* Tarjetas de Pedidos */
        .pedidos-grid {
            display: grid;
            gap: 25px;
        }

        .pedido-card {
            background: white;
            border-radius: 15px;
            box-shadow: 0 2px 15px rgba(0, 0, 0, 0.08);
            padding: 30px;
            transition: transform 0.3s ease, box-shadow 0.3s ease;
            position: relative;
        }

            .pedido-card:hover {
                transform: translateY(-5px);
                box-shadow: 0 8px 25px rgba(0, 0, 0, 0.12);
            }

        .pedido-header {
            display: flex;
            justify-content: space-between;
            align-items: start;
            margin-bottom: 25px;
            padding-bottom: 20px;
            border-bottom: 2px solid #f7fafc;
        }

        .pedido-info {
            flex: 1;
        }

        .pedido-id {
            font-size: 14px;
            color: #a0aec0;
            margin-bottom: 8px;
            font-weight: 500;
        }

        .pedido-fecha {
            font-size: 28px;
            font-weight: 700;
            color: #2d3748;
            margin-bottom: 8px;
        }

        .pedido-hora {
            font-size: 16px;
            color: #718096;
            display: flex;
            align-items: center;
            gap: 8px;
        }

            .pedido-hora i {
                color: #667eea;
            }

        .pedido-estado {
            padding: 10px 20px;
            border-radius: 25px;
            font-size: 14px;
            font-weight: 600;
        }

        .estado-pendiente {
            background: #fef3c7;
            color: #92400e;
        }

        .estado-pagado {
            background: #dbeafe;
            color: #1e40af;
        }

        .estado-aceptado {
            background: #e0e7ff;
            color: #4338ca;
        }

        .estado-completado {
            background: #d1fae5;
            color: #065f46;
        }

        /* ✅ ESTADO CANCELADO - MÁS PROMINENTE */
        .estado-cancelado {
            background: linear-gradient(135deg, #fee2e2, #fecaca);
            color: #991b1b;
            border: 2px solid #f87171;
            font-weight: 700;
            box-shadow: 0 2px 8px rgba(248, 113, 113, 0.3);
        }

        /* ✅ TARJETA DE PEDIDO CANCELADO */
        .pedido-card.cancelado {
            opacity: 0.75;
            background: linear-gradient(135deg, #fef2f2 0%, #ffffff 100%);
            border: 2px solid #fecaca;
        }

            /* ✅ OVERLAY DE CANCELADO */
            .pedido-card.cancelado::after {
                content: '';
                position: absolute;
                top: 0;
                left: 0;
                right: 0;
                bottom: 0;
                background: repeating-linear-gradient( 45deg, transparent, transparent 10px, rgba(239, 68, 68, 0.03) 10px, rgba(239, 68, 68, 0.03) 20px );
                pointer-events: none;
                border-radius: 15px;
            }

        /* Sección del Prestador */
        .prestador-section {
            display: flex;
            align-items: center;
            justify-content: space-between;
            padding: 25px;
            background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
            border-radius: 15px;
            margin-bottom: 25px;
            color: white;
        }

        .prestador-info {
            display: flex;
            align-items: center;
            gap: 20px;
        }

        .prestador-avatar {
            width: 70px;
            height: 70px;
            border-radius: 50%;
            background: rgba(255,255,255,0.2);
            display: flex;
            align-items: center;
            justify-content: center;
            font-size: 28px;
            border: 3px solid rgba(255,255,255,0.3);
        }

        .prestador-datos h3 {
            font-size: 20px;
            font-weight: 600;
            margin-bottom: 8px;
        }

        .prestador-datos p {
            font-size: 14px;
            opacity: 0.9;
            display: flex;
            align-items: center;
            gap: 8px;
        }

        .quick-action-btn {
            background: white;
            color: #667eea;
            border: none;
            padding: 14px 28px;
            border-radius: 10px;
            font-weight: 600;
            cursor: pointer;
            display: flex;
            align-items: center;
            gap: 10px;
            transition: all 0.3s ease;
            font-size: 15px;
        }

            .quick-action-btn:hover:not(:disabled) {
                transform: scale(1.05);
                box-shadow: 0 6px 20px rgba(0,0,0,0.15);
            }

            .quick-action-btn:disabled {
                opacity: 0.5;
                cursor: not-allowed;
            }

        /* Detalles del Pedido */
        .pedido-detalles {
            margin-top: 25px;
        }

        .detalle-item {
            display: flex;
            justify-content: space-between;
            align-items: center;
            padding: 15px 0;
            border-bottom: 1px solid #f7fafc;
        }

            .detalle-item:last-child {
                border-bottom: none;
            }

        .detalle-label {
            color: #718096;
            font-size: 15px;
            display: flex;
            align-items: center;
            gap: 10px;
        }

            .detalle-label i {
                color: #667eea;
                font-size: 16px;
            }

        .detalle-valor {
            color: #2d3748;
            font-weight: 600;
            font-size: 15px;
            text-align: right;
        }

        .pedido-total {
            margin-top: 20px;
            padding-top: 20px;
            border-top: 3px solid #e2e8f0;
            display: flex;
            justify-content: space-between;
            align-items: center;
        }

        .total-label {
            font-size: 20px;
            font-weight: 700;
            color: #2d3748;
        }

        .total-valor {
            font-size: 28px;
            font-weight: 700;
            color: #667eea;
        }

        /* BOTONES */
        .botones-container {
            display: flex;
            gap: 12px;
            margin-top: 20px;
        }

        .btn-action {
            display: inline-flex;
            align-items: center;
            justify-content: center;
            gap: 8px;
            padding: 12px 20px;
            border: none;
            border-radius: 12px;
            font-weight: 600;
            font-size: 14px;
            transition: all 0.3s ease;
            cursor: pointer;
            text-decoration: none;
        }

        .btn-pdf {
            background: linear-gradient(135deg, #10b981, #059669);
            color: white;
            flex: 0.8;
        }

            .btn-pdf:hover {
                background: linear-gradient(135deg, #059669, #047857);
                transform: translateY(-2px);
                box-shadow: 0 4px 12px rgba(16, 185, 129, 0.4);
                color: white;
            }

        .btn-cancelar {
            background: linear-gradient(135deg, #f44336, #d32f2f);
            color: white;
            flex: 1;
        }

            .btn-cancelar:hover:not(:disabled) {
                background: linear-gradient(135deg, #e53935, #c62828);
                transform: translateY(-2px);
                box-shadow: 0 4px 12px rgba(244, 67, 54, 0.4);
            }

            .btn-cancelar:disabled {
                background: #ccc;
                cursor: not-allowed;
                transform: none;
            }

        .btn-detalles {
            background: linear-gradient(135deg, #667eea, #764ba2);
            color: white;
            flex: 1;
        }

            .btn-detalles:hover {
                background: linear-gradient(135deg, #5568d3, #653a8e);
                transform: translateY(-2px);
                box-shadow: 0 4px 12px rgba(102, 126, 234, 0.4);
                color: white;
            }

        /* ✅ DESHABILITAR BOTONES EN PEDIDOS CANCELADOS */
        .pedido-card.cancelado .btn-action:not(.btn-pdf):not(.btn-detalles) {
            opacity: 0.5;
            cursor: not-allowed;
            background: #e5e7eb;
            color: #9ca3af;
        }

            .pedido-card.cancelado .btn-action:not(.btn-pdf):not(.btn-detalles):hover {
                transform: none;
                box-shadow: none;
            }

        /* ✅ MENSAJE DE CANCELACIÓN */
        .motivo-cancelacion {
            background: #fff5f5;
            border-left: 3px solid #f87171;
            padding: 12px 15px;
            border-radius: 8px;
            margin-top: 15px;
            font-size: 14px;
            color: #7f1d1d;
        }

            .motivo-cancelacion i {
                margin-right: 8px;
                color: #ef4444;
            }

        .empty-state {
            text-align: center;
            padding: 80px 20px;
            background: white;
            border-radius: 15px;
            box-shadow: 0 2px 15px rgba(0, 0, 0, 0.08);
        }

            .empty-state i {
                font-size: 80px;
                color: #cbd5e0;
                margin-bottom: 25px;
            }

            .empty-state h3 {
                font-size: 24px;
                color: #2d3748;
                margin-bottom: 12px;
            }

            .empty-state p {
                color: #718096;
                font-size: 16px;
            }

        .sidebar-toggle {
            display: none;
            position: fixed;
            bottom: 20px;
            left: 20px;
            width: 50px;
            height: 50px;
            background: linear-gradient(135deg, #667eea, #764ba2);
            color: white;
            border: none;
            border-radius: 50%;
            box-shadow: 0 5px 20px rgba(102, 126, 234, 0.4);
            cursor: pointer;
            z-index: 999;
            font-size: 20px;
        }

        /* RESPONSIVE */
        @@media (max-width: 768px) {
            .compact-sidebar

        {
            transform: translateX(-100%);
        }

        .compact-sidebar.active {
            transform: translateX(0);
        }

        .main-content {
            margin-left: 0;
        }

        .sidebar-toggle {
            display: flex;
            align-items: center;
            justify-content: center;
        }

        .page-title {
            font-size: 28px;
        }

        .pedido-header {
            flex-direction: column;
            gap: 15px;
        }

        .prestador-section {
            flex-direction: column;
            gap: 20px;
            text-align: center;
        }

        .prestador-info {
            flex-direction: column;
            text-align: center;
        }

        .quick-action-btn {
            width: 100%;
        }

        .botones-container {
            flex-direction: column;
        }

        .btn-pdf {
            flex: 1;
        }

        }
    </style>
</head>
<body>
    <div class="pedidos-layout">
        <!-- SIDEBAR -->
        <div class="compact-sidebar" id="sidebar">
            <div class="sidebar-content">
                <div class="sidebar-header">
                    <div class="logo-mini">
                        <div class="paw-icon">🐾</div>
                    </div>
                    <div class="user-greeting">
                        <h4>Hola, @userName</h4>
                        <span class="user-type">Dueño de Mascota</span>
                    </div>
                </div>

                <div class="quick-nav">
                    <a href="@Url.Action("Index", "Prestadores")" class="nav-link">
                        <div class="nav-icon">
                            <i class="fas fa-home"></i>
                        </div>
                        <span>Inicio</span>
                    </a>
                    <a href="@Url.Action("MisPedidos", "Pedidodueño")" class="nav-link active">
                        <div class="nav-icon">
                            <i class="fas fa-shopping-bag"></i>
                        </div>
                        <span>Mis Pedidos</span>
                    </a>
                    <a href="@Url.Action("Index", "Mascotas")" class="nav-link">
                        <div class="nav-icon">
                            <i class="fas fa-paw"></i>
                        </div>
                        <span>Mis Mascotas</span>
                    </a>
                    <a href="@Url.Action("EditarPerfil", "Perfil")" class="nav-link">
                        <div class="nav-icon">
                            <i class="fas fa-users"></i>
                        </div>
                        <span>Mi Perfil</span>
                    </a>
                </div>

                <div class="sidebar-footer">
                    <form method="post" action="/Autenticacion/Logout" style="margin: 0;">
                        <button type="submit" class="logout-btn">
                            <i class="fas fa-sign-out-alt"></i>
                            <span>Cerrar Sesión</span>
                        </button>
                    </form>
                </div>
            </div>
        </div>

        <!-- CONTENIDO PRINCIPAL -->
        <main class="main-content">
            <div class="page-container">
                <div class="page-header">
                    <h1 class="page-title">Mis Pedidos</h1>
                    <p class="page-subtitle">Aquí puedes ver todos tus pedidos y contactar a tus prestadores</p>
                </div>

                <div class="pedidos-grid">
                    @if (Model != null && Model.Any())
                    {
                        @foreach (var pedido in Model)
                        {
                            <!-- ✅ AGREGAR CLASE 'cancelado' SI EL ESTADO ES CANCELADO -->
                            <div class="pedido-card @(pedido.Estado == "Cancelado" ? "cancelado" : "")">
                                <div class="pedido-header">
                                    <div class="pedido-info">
                                        <div class="pedido-id">Pedido #@pedido.IdPedido</div>
                                        <div class="pedido-fecha">@pedido.FechaServicio.ToString("dd MMM yyyy")</div>
                                        <div class="pedido-hora">
                                            <i class="fas fa-clock"></i>
                                            @pedido.HoraServicioFrom.ToString(@"HH\:mm") - @pedido.HoraServicioTo.ToString(@"HH\:mm")
                                        </div>
                                    </div>
                                    <span class="pedido-estado @(
                                          pedido.Estado == "Pendiente" ? "estado-pendiente" :
                                          pedido.Estado == "Pagado" ? "estado-pagado" :
                                          pedido.Estado == "Aceptado" ? "estado-aceptado" :
                                          pedido.Estado == "Completado" ? "estado-completado" :
                                          pedido.Estado == "Cancelado" ? "estado-cancelado" :
                                          "estado-pagado")">
                                @pedido.Estado
                            </span>
                        </div>

                                <!-- Sección del Prestador -->
                                <div class="prestador-section">
                                    <div class="prestador-info">
                                        <div class="prestador-avatar">
                                            <i class="fas fa-user"></i>
                                        </div>
                                        <div class="prestador-datos">
                                            <h3>@pedido.IdUsuarioPrestadorNavigation.PrimerNombre @pedido.IdUsuarioPrestadorNavigation.PrimerApellido</h3>
                                            <p>
                                                <i class="fas fa-phone"></i>
                                                @pedido.IdUsuarioPrestadorNavigation.Telefono
                                            </p>
                                        </div>
                                    </div>
                                    <button class="quick-action-btn"
                                            onclick="contactPrestador('@pedido.IdUsuarioPrestadorNavigation.Telefono')"
                                            @(pedido.Estado == "Cancelado" ? "disabled" : "")>
                                        <i class="fas fa-comment"></i>
                                        <span>Contactar</span>
                                    </button>
                                </div>

                                <!-- Detalles del Pedido -->
                                <div class="pedido-detalles">
                                    <div class="detalle-item">
                                        <span class="detalle-label">
                                            <i class="fas fa-map-marker-alt"></i>
                                            Dirección
                                        </span>
                                        <span class="detalle-valor">@pedido.IdDireccionNavigation.Direccion</span>
                                    </div>

                            @if (pedido.TbPedidoMascota.Any())
                                    {
                                        <div class="detalle-item">
                                            <span class="detalle-label">
                                                <i class="fas fa-paw"></i>
                                                Mascotas
                                            </span>
                                            <span class="detalle-valor">
                                                @string.Join(", ", pedido.TbPedidoMascota.Select(pm => pm.IdMascotaNavigation.Nombre))
                                            </span>
                                        </div>
                                    }

                                    @if (pedido.TbDetallePedidos.Any())
                                    {
                                        <div class="detalle-item">
                                            <span class="detalle-label">
                                                <i class="fas fa-list"></i>
                                                Servicios
                                            </span>
                                            <span class="detalle-valor">
                                                @string.Join(", ", pedido.TbDetallePedidos.Select(d => d.IdServicioNavigation.Nombre))
                                            </span>
                                        </div>
                                    }
                                </div>

                                <!-- Total -->
                                <div class="pedido-total">
                                    <span class="total-label">Total</span>
                                    <span class="total-valor">$@pedido.Total.ToString("N0")</span>
                                </div>

                                <!-- ✅ BOTONES CON LÓGICA DE DESHABILITACIÓN -->
                                <div class="botones-container">
                                    <a href="@Url.Action("GenerarFacturaPDF", "Pedidodueño", new { id = pedido.IdPedido })"
                                       class="btn-action btn-pdf"
                                       target="_blank">
                                        <i class="fas fa-file-pdf"></i>
                                        <span>PDF</span>
                                    </a>

                                    <button class="btn-action btn-cancelar"
                                            onclick="cancelarPedido(@pedido.IdPedido)"
                                            @(pedido.Estado == "Cancelado" || pedido.Estado == "Completado" ? "disabled" : "")>
                                        <i class="fas fa-times-circle"></i>
                                        <span>@(pedido.Estado == "Cancelado" ? "Cancelado" : "Cancelar")</span>
                                    </button>

                                    <a href="@Url.Action("DetallePedido", "Pedidodueño", new { id = pedido.IdPedido })"
                                       class="btn-action btn-detalles">
                                        <i class="fas fa-eye"></i>
                                        <span>Detalles</span>
                                    </a>
                                </div>

                                <!-- ✅ MENSAJE SI ESTÁ CANCELADO -->
                                @if (pedido.Estado == "Cancelado")
                                {
                                    <div class="motivo-cancelacion">
                                        <i class="fas fa-info-circle"></i>
                                        Este pedido fue cancelado. El prestador ha sido notificado.
                                    </div>
                                }
                            </div>
                        }
                    }
                    else
                    {
                        <div class="empty-state">
                            <i class="fas fa-inbox"></i>
                            <h3>No tienes pedidos</h3>
                            <p>Cuando realices un pedido, aparecerá aquí</p>
                        </div>
                    }
                </div>
            </div>
        </main>
    </div>

    <!-- Botón para toggle sidebar en móviles -->
    <button class="sidebar-toggle" onclick="toggleSidebar()">
        <i class="fas fa-bars"></i>
    </button>

    <script>
        // ✅ FUNCIÓN PARA CANCELAR PEDIDO
               async function cancelarPedido(idPedido) {
            console.log('🎯 Cancelando pedido ID:', idPedido); // Debug

            if (!confirm('¿Estás seguro de que deseas cancelar este pedido?\n\nRecuerda: Solo puedes cancelar con al menos 24 horas de anticipación.')) {
                return;
            }

            const boton = event.target.closest('button');
            const textoOriginal = boton.innerHTML;
            boton.disabled = true;
            boton.innerHTML = '<i class="fas fa-spinner fa-spin"></i> <span>Cancelando...</span>';

            try {
                const payload = { idPedido: idPedido };
                console.log('📤 Enviando:', JSON.stringify(payload)); // Debug

                const response = await fetch('/Pedidodueño/CancelarPedido', {
                    method: 'POST',
                    headers: {
                        'Content-Type': 'application/json'
                    },
                    body: JSON.stringify(payload)
                });

                console.log('📥 Response status:', response.status); // Debug
                const data = await response.json();
                console.log('📥 Response data:', data); // Debug

