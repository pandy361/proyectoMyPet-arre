        }

        .paw-icon {
            color: white;
            font-size: 2rem;
        }

        .logo-text {
            font-size: 1.8rem;
            font-weight: bold;
            color: #333;
            margin-bottom: 0.5rem;
        }

        .tagline {
            color: #666;
            font-size: 0.9rem;
            line-height: 1.4;
        }

        .features {
