@using System.Linq
@model proyecto_mejoradoMy_pet.Models.HomeViewModel
@{
    ViewData["Title"] = "MyPet - Inicio";
    Layout = null;
}

<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewData["Title"]</title>
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css" rel="stylesheet">
    <style>
        * {
            margin: 0;
            padding: 0;
            box-sizing: border-box;
        }

        body, html {
            height: 100%;
            overflow-x: hidden;
        }

        .home-layout {
            display: flex;
            min-height: 100vh;
            font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
            background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
        }

        /* COMPACT SIDEBAR */
        .compact-sidebar {
            width: 280px;
            background: white;
            box-shadow: 2px 0 20px rgba(0, 0, 0, 0.1);
            position: fixed;
            height: 100vh;
            left: 0;
            top: 0;
            z-index: 1000;
            overflow-y: auto;
            transition: transform 0.3s ease;
            border-top-right-radius: 25px;
            border-bottom-right-radius: 25px;
        }

        .sidebar-content {
            padding: 40px 20px;
            height: 100%;
            display: flex;
            flex-direction: column;
            justify-content: center;
        }

        .sidebar-header {
            text-align: center;
            margin-bottom: 30px;
            padding-bottom: 20px;
            border-bottom: 2px solid #f0f0f0;
        }

        .logo-mini {
            width: 60px;
            height: 60px;
            background: linear-gradient(135deg, #4CAF50, #2E7D32);
            border-radius: 15px;
            display: flex;
            align-items: center;
            justify-content: center;
            margin: 0 auto 15px;
            box-shadow: 0 5px 15px rgba(76, 175, 80, 0.3);
            animation: logoFloat 3s ease-in-out infinite;
        }

        @@keyframes logoFloat {
            0%, 100%

        {
            transform: translateY(0px);
        }

        50% {
            transform: translateY(-5px);
        }

        }

        .paw-icon {
            color: white;
            font-size: 28px;
        }

        .user-greeting h4 {
            color: #333;
            margin: 0 0 5px 0;
            font-size: 18px;
        }

        .user-type {
            color: #4CAF50;
            font-size: 13px;
            font-weight: 600;
        }

        /* Stats Box */
        .stats-box {
            background: rgba(103, 126, 234, 0.08);
            border-radius: 12px;
            padding: 20px;
            margin-bottom: 25px;
        }

        .stats-title {
            font-size: 14px;
            font-weight: 700;
            color: #333;
            margin-bottom: 15px;
            text-align: center;
        }

        .stat-row {
            display: flex;
            justify-content: space-between;
            align-items: center;
            padding: 10px 0;
            border-bottom: 1px solid rgba(0, 0, 0, 0.05);
        }

            .stat-row:last-child {
                border-bottom: none;
            }

        .stat-label {
            color: #666;
            font-size: 13px;
            font-weight: 500;
        }

        .stat-value {
            color: #4CAF50;
            font-weight: 700;
            font-size: 15px;
        }

        /* Quick Nav */
        .quick-nav {
            margin-top: auto;
            padding-top: 20px;
            border-top: 2px solid #f0f0f0;
        }

        .nav-link {
            display: flex;
            align-items: center;
            padding: 12px 15px;
            margin-bottom: 8px;
            color: #666;
            text-decoration: none;
            border-radius: 12px;
            transition: all 0.3s ease;
            font-size: 14px;
        }

            .nav-link:hover {
                background: #f0f8ff;
                color: #667eea;
                transform: translateX(3px);
            }

        .nav-icon {
            width: 40px;
            height: 40px;
            display: flex;
            align-items: center;
            justify-content: center;
            margin-right: 12px;
            background: #f8f9fa;
            border-radius: 10px;
            font-size: 16px;
        }

        .copyright {
            text-align: center;
            font-size: 11px;
            color: #999;
            margin-top: 15px;
            line-height: 1.4;
        }

        /* MAIN CONTENT */
        .main-content {
            flex: 1;
            margin-left: 280px;
            padding: 40px;
            overflow-y: auto;
        }

        /* Hero Section */
        .hero-section {
            background: rgba(255, 255, 255, 0.98);
            border-radius: 20px;
            padding: 50px 40px;
            margin-bottom: 40px;
            box-shadow: 0 10px 30px rgba(0, 0, 0, 0.1);
            text-align: center;
            position: relative;
            overflow: hidden;
        }

            .hero-section::before {
                content: '';
                position: absolute;
                top: 0;
                left: 0;
                right: 0;
                height: 4px;
                background: linear-gradient(90deg, #4CAF50, #667eea, #764ba2);
            }

        .hero-title {
            font-size: 42px;
            font-weight: 700;
            background: linear-gradient(135deg, #667eea, #764ba2);
            -webkit-background-clip: text;
            -webkit-text-fill-color: transparent;
            background-clip: text;
            margin-bottom: 15px;
        }

        .hero-subtitle {
            font-size: 18px;
            color: #666;
            margin-bottom: 30px;
            line-height: 1.6;
            max-width: 700px;
            margin-left: auto;
            margin-right: auto;
        }

        .cta-buttons {
            display: flex;
            gap: 15px;
            justify-content: center;
            flex-wrap: wrap;
        }

        .btn {
            padding: 14px 32px;
            border: none;
            border-radius: 12px;
            font-size: 16px;
            font-weight: 600;
            cursor: pointer;
            transition: all 0.3s ease;
            text-decoration: none;
            display: inline-flex;
            align-items: center;
            gap: 8px;
        }

        .btn-primary {
            background: linear-gradient(135deg, #4CAF50, #2E7D32);
            color: white;
            box-shadow: 0 6px 20px rgba(76, 175, 80, 0.3);
        }

            .btn-primary:hover {
                transform: translateY(-2px);
                box-shadow: 0 8px 25px rgba(76, 175, 80, 0.4);
            }

        .btn-secondary {
            background: white;
            color: #667eea;
            border: 2px solid #667eea;
        }

            .btn-secondary:hover {
                background: #667eea;
                color: white;
            }

        /* Stats Overview */
        .stats-overview {
            display: grid;
            grid-template-columns: repeat(auto-fit, minmax(220px, 1fr));
            gap: 30px;
            margin-bottom: 40px;
        }

        .stat-card {
            background: rgba(255, 255, 255, 0.98);
            border-radius: 15px;
            padding: 30px;
            text-align: center;
            box-shadow: 0 5px 20px rgba(0, 0, 0, 0.08);
            transition: all 0.3s ease;
        }

            .stat-card:hover {
                transform: translateY(-5px);
                box-shadow: 0 10px 30px rgba(0, 0, 0, 0.12);
            }

        .stat-number {
            font-size: 36px;
            font-weight: 700;
            background: linear-gradient(135deg, #4CAF50, #2E7D32);
            -webkit-background-clip: text;
            -webkit-text-fill-color: transparent;
            background-clip: text;
            margin-bottom: 8px;
        }

        .stat-label {
            color: #666;
            font-size: 14px;
            font-weight: 500;
        }

        /* Content Section */
        .content-section {
            background: rgba(255, 255, 255, 0.98);
            border-radius: 20px;
            padding: 40px;
            margin-bottom: 40px;
            box-shadow: 0 10px 30px rgba(0, 0, 0, 0.1);
        }

        .section-title {
            font-size: 32px;
            font-weight: 700;
            text-align: center;
            margin-bottom: 40px;
            background: linear-gradient(135deg, #667eea, #764ba2);
            -webkit-background-clip: text;
            -webkit-text-fill-color: transparent;
            background-clip: text;
        }

        /* Services Grid */
        .services-grid {
            display: grid;
            grid-template-columns: repeat(auto-fit, minmax(280px, 1fr));
            gap: 30px;
        }

        .service-card {
            background: white;
            border-radius: 15px;
            padding: 30px;
            text-align: center;
            transition: all 0.3s ease;
            border: 2px solid #f0f0f0;
        }

            .service-card:hover {
                transform: translateY(-5px);
                box-shadow: 0 10px 25px rgba(0, 0, 0, 0.1);
                border-color: #667eea;
            }

        .service-icon {
            width: 70px;
            height: 70px;
            border-radius: 15px;
            display: flex;
            align-items: center;
            justify-content: center;
            margin: 0 auto 20px;
            font-size: 28px;
            color: white;
        }

            .service-icon.walking {
                background: linear-gradient(135deg, #FF6B6B, #FF5252);
            }

            .service-icon.grooming {
                background: linear-gradient(135deg, #4ECDC4, #26C6DA);
            }

            .service-icon.boarding {
                background: linear-gradient(135deg, #9C27B0, #7B1FA2);
            }

            .service-icon.training {
                background: linear-gradient(135deg, #96CEB4, #4CAF50);
            }

            .service-icon.veterinary {
                background: linear-gradient(135deg, #FF9800, #F57C00);
            }

            .service-icon.daycare {
                background: linear-gradient(135deg, #E91E63, #C2185B);
            }

        .service-title {
            font-size: 20px;
            font-weight: 700;
            color: #333;
            margin-bottom: 12px;
        }

        .service-description {
            color: #666;
            line-height: 1.6;
            margin-bottom: 20px;
            font-size: 14px;
        }

        .service-price {
            font-size: 18px;
            font-weight: 700;
            color: #4CAF50;
            background: rgba(76, 175, 80, 0.1);
            padding: 8px 20px;
            border-radius: 20px;
            display: inline-block;
        }

        /* Providers Grid */
        .providers-grid {
            display: grid;
            grid-template-columns: repeat(auto-fit, minmax(280px, 1fr));
            gap: 30px;
        }

        .provider-card {
            background: white;
            border-radius: 15px;
            padding: 30px;
            text-align: center;
            transition: all 0.3s ease;
            border: 2px solid #f0f0f0;
        }

            .provider-card:hover {
                transform: translateY(-5px);
                box-shadow: 0 10px 25px rgba(0, 0, 0, 0.1);
                border-color: #667eea;
            }

        .provider-avatar {
            width: 80px;
            height: 80px;
            border-radius: 50%;
            background: linear-gradient(135deg, #667eea, #764ba2);
            display: flex;
            align-items: center;
            justify-content: center;
            margin: 0 auto 15px;
            color: white;
            font-size: 28px;
            font-weight: 700;
            box-shadow: 0 5px 20px rgba(0, 0, 0, 0.1);
        }

        .provider-name {
            font-size: 20px;
            font-weight: 700;
            color: #333;
            margin-bottom: 10px;
        }

        .rating {
            display: flex;
            justify-content: center;
            gap: 4px;
            margin-bottom: 15px;
        }

        .star {
            color: #FFD700;
            font-size: 16px;
        }

            .star.empty {
                color: #DDD;
            }

        .provider-specialty {
            color: #666;
            line-height: 1.6;
            margin-bottom: 15px;
            font-size: 14px;
        }

        .provider-experience {
            color: #4CAF50;
            font-weight: 600;
            background: rgba(76, 175, 80, 0.1);
            padding: 6px 16px;
            border-radius: 15px;
            display: inline-block;
            font-size: 13px;
        }

        /* Reviews Grid */
        .reviews-grid {
            display: grid;
            grid-template-columns: repeat(auto-fit, minmax(320px, 1fr));
            gap: 30px;
        }

        .review-card {
            background: white;
            border-radius: 15px;
            padding: 25px;
            transition: all 0.3s ease;
            border: 2px solid #f0f0f0;
        }

            .review-card:hover {
                transform: translateY(-3px);
                box-shadow: 0 8px 20px rgba(0, 0, 0, 0.08);
                border-color: #667eea;
            }

        .review-header {
            display: flex;
            justify-content: space-between;
            align-items: center;
            margin-bottom: 15px;
            padding-bottom: 12px;
            border-bottom: 1px solid #f0f0f0;
        }

        .review-author {
            font-weight: 600;
            color: #333;
            font-size: 15px;
        }

        .review-date {
            color: #999;
            font-size: 12px;
        }

        .review-text {
            color: #666;
            line-height: 1.6;
            margin-bottom: 15px;
            font-style: italic;
            font-size: 14px;
        }

        .review-rating {
            display: flex;
            gap: 4px;
            align-items: center;
        }

        .review-service {
            margin-left: auto;
            background: rgba(103, 126, 234, 0.1);
            color: #667eea;
            padding: 4px 12px;
            border-radius: 12px;
            font-size: 12px;
            font-weight: 600;
        }

        /* Mobile Menu Toggle */
        .sidebar-toggle {
            display: none;
            position: fixed;
            bottom: 20px;
            left: 20px;
            width: 50px;
            height: 50px;
            background: linear-gradient(135deg, #667eea, #764ba2);
            color: white;
            border: none;
            border-radius: 50%;
            box-shadow: 0 5px 20px rgba(102, 126, 234, 0.4);
            cursor: pointer;
            z-index: 999;
            font-size: 20px;
        }

        /* RESPONSIVE */
        @@media (max-width: 768px) {
            .compact-sidebar

        {
            transform: translateX(-100%);
        }

        .compact-sidebar.active {
            transform: translateX(0);
        }

        .main-content {
            margin-left: 0;
            padding: 20px;
        }

        .sidebar-toggle {
            display: flex;
            align-items: center;
            justify-content: center;
        }

        .hero-title {
            font-size: 32px;
        }

        .hero-subtitle {
            font-size: 16px;
        }

        .services-grid,
        .providers-grid,
        .reviews-grid {
            grid-template-columns: 1fr;
        }

        .stats-overview {
            grid-template-columns: repeat(2, 1fr);
        }

        }

        @@media (max-width: 480px) {
            .stats-overview

        {
            grid-template-columns: 1fr;
        }

        .hero-section {
            padding: 30px 20px;
        }

        .content-section {
            padding: 25px 20px;
        }

        }
    </style>
</head>
<body>
    <div class="home-layout">
        <!-- SIDEBAR -->
        <aside class="compact-sidebar" id="sidebar">
            <div class="sidebar-content">
                <div class="sidebar-header">
                    <div class="logo-mini">
                        <div class="paw-icon">🐾</div>
                    </div>
                    <div class="user-greeting">
                        <h4>MyPet</h4>
                        <span class="user-type">Tu plataforma de confianza</span>
                    </div>
                </div>

                <!-- Stats Box -->
                <div class="stats-box">
                    <div class="stats-title">Estadísticas</div>
                    <div class="stat-row">
                        <span class="stat-label">Usuarios</span>
                        <span class="stat-value">@(Model?.Statistics?.TotalUsuarios ?? 0)</span>
                    </div>
                    <div class="stat-row">
                        <span class="stat-label">Prestadores</span>
                        <span class="stat-value">@(Model?.Statistics?.TotalPrestadores ?? 0)</span>
                    </div>
                    <div class="stat-row">
                        <span class="stat-label">Pedidos</span>
                        <span class="stat-value">@(Model?.Statistics?.TotalPedidos ?? 0)</span>
                    </div>
                </div>

                <!-- Navigation -->
                <div class="quick-nav">
                    <a href="@Url.Action("Privacy", "Home")" class="nav-link">
                        <div class="nav-icon">
                            <i class="fas fa-home"></i>
                        </div>
                        <span>Inicio</span>
                    </a>
                    <a href="@Url.Action("Login", "Autenticacion")" class="nav-link">
                        <div class="nav-icon">
                            <i class="fas fa-sign-in-alt"></i>
                        </div>
                        <span>Iniciar Sesión</span>
                    </a>
                </div>

                <div class="copyright">
                    © 2025 MyPet<br>Todos los derechos reservados
                </div>
            </div>
        </aside>

        <!-- MAIN CONTENT -->
        <main class="main-content">
            <!-- Hero Section -->
            <section class="hero-section">
                <h1 class="hero-title">Bienvenido a MyPet</h1>
                <p class="hero-subtitle">
                    La plataforma más confiable para conectar dueños de mascotas con prestadores de servicios profesionales.
                    Encuentra el cuidado perfecto para tu compañero peludo.
                </p>
                <div class="cta-buttons">
                    <a href="@Url.Action("Index", "Registro1")" class="btn btn-primary">
                        <i class="fas fa-user-plus"></i>
                        Únete Ahora
                    </a>
                    <a href="@Url.Action("Login", "Autenticacion")" class="btn btn-secondary">
                        <i class="fas fa-sign-in-alt"></i>
                        Iniciar Sesión
                    </a>
                </div>
            </section>

            <!-- Stats Overview -->
            <div class="stats-overview">
                <div class="stat-card">
                    <div class="stat-number">@(Model?.Statistics?.TotalUsuarios ?? 0)+</div>
                    <div class="stat-label">Usuarios Registrados</div>
                </div>
                <div class="stat-card">
                    <div class="stat-number">@(Model?.Statistics?.TotalPrestadores ?? 0)+</div>
                    <div class="stat-label">Prestadores Activos</div>
                </div>
                <div class="stat-card">
                    <div class="stat-number">@(Model?.Statistics?.TotalPedidos ?? 0)+</div>
                    <div class="stat-label">Pedidos Realizados</div>
                </div>
                <div class="stat-card">
                    <div class="stat-number">@(Model?.Statistics?.PromedioFormateado ?? "4.8")★</div>
                    <div class="stat-label">Calificación Promedio</div>
                </div>
            </div>

            <!-- Services Section -->
            <section class="content-section">
                <h2 class="section-title">Nuestros Servicios</h2>
                <div class="services-grid">
                    <div class="service-card">
                        <div class="service-icon walking">
                            <i class="fas fa-walking"></i>
                        </div>
                        <h3 class="service-title">Paseo de Mascotas</h3>
                        <p class="service-description">
                            Paseos seguros y divertidos para mantener a tu mascota activa y feliz.
                        </p>
                        <div class="service-price">Desde $15,000</div>
                    </div>

                    <div class="service-card">
                        <div class="service-icon grooming">
                            <i class="fas fa-cut"></i>
                        </div>
                        <h3 class="service-title">Peluquería</h3>
                        <p class="service-description">
                            Servicios completos de grooming para mantener a tu mascota limpia y saludable.
                        </p>
                        <div class="service-price">Desde $25,000</div>
                    </div>

                    <div class="service-card">
                        <div class="service-icon boarding">
                            <i class="fas fa-home"></i>
                        </div>
                        <h3 class="service-title">Hospedaje</h3>
                        <p class="service-description">
                            Hospedaje seguro y cómodo con atención personalizada 24/7.
                        </p>
                        <div class="service-price">Desde $35,000</div>
                    </div>

                    <div class="service-card">
                        <div class="service-icon training">
                            <i class="fas fa-graduation-cap"></i>
                        </div>
                        <h3 class="service-title">Entrenamiento</h3>
                        <p class="service-description">
                            Programas personalizados para mejorar el comportamiento de tu mascota.
                        </p>
                        <div class="service-price">Desde $40,000</div>
                    </div>

                    <div class="service-card">
                        <div class="service-icon daycare">
                            <i class="fas fa-baby"></i>
                        </div>
                        <h3 class="service-title">Guardería</h3>
                        <p class="service-description">
                            Cuidado diurno en ambiente seguro con actividades supervisadas.
                        </p>
                        <div class="service-price">Desde $30,000</div>
                    </div>
                </div>
            </section>

            <!-- Providers Section -->
            <section class="content-section">
                <h2 class="section-title">Prestadores Destacados</h2>
                <div class="providers-grid">
                    @{
                        bool hasProviders = Model?.TopProviders != null && Model.TopProviders.Count > 0;
                    }

                    @if (hasProviders)
                    {
                        @foreach (var prestador in Model.TopProviders.Take(6))
                        {
                            <div class="provider-card">
                                <div class="provider-avatar">@prestador.Iniciales</div>
                                <h3 class="provider-name">@prestador.NombreCompleto</h3>
                                <div class="rating">
                                    @for (int i = 1; i <= 5; i++)
                                    {
                                        @if (i <= prestador.Estrellas)
                                        {
                                            <span class="star">★</span>
                                        }
                                        else
                                        {
                                            <span class="star empty">★</span>
                                        }
                                    }
                                </div>
                                <p class="provider-specialty">@prestador.Especialidad</p>
                                <div class="provider-experience">@prestador.ExperienciaTexto</div>
                            </div>
                        }
                    }
                    else
                    {
                        <!-- Prestadores de ejemplo -->
                        <div class="provider-card">
                            <div class="provider-avatar">MG</div>
                            <h3 class="provider-name">María García</h3>
                            <div class="rating">
                                <span class="star">★</span>
                                <span class="star">★</span>
                                <span class="star">★</span>
                                <span class="star">★</span>
                                <span class="star">★</span>
                            </div>
                            <p class="provider-specialty">
                                Especialista en cuidado canino con certificación profesional.
                            </p>
                            <div class="provider-experience">5 años de experiencia</div>
                        </div>

                        <div class="provider-card">
                            <div class="provider-avatar">CR</div>
                            <h3 class="provider-name">Carlos Rodríguez</h3>
                            <div class="rating">
                                <span class="star">★</span>
                                <span class="star">★</span>
                                <span class="star">★</span>
                                <span class="star">★</span>
                                <span class="star empty">★</span>
                            </div>
                            <p class="provider-specialty">
                                Veterinario con especialización en medicina preventiva.
                            </p>
                            <div class="provider-experience">8 años de experiencia</div>
                        </div>

                        <div class="provider-card">
                            <div class="provider-avatar">LP</div>
                            <h3 class="provider-name">Laura Pérez</h3>
                            <div class="rating">
                                <span class="star">★</span>
                                <span class="star">★</span>
                                <span class="star">★</span>
                                <span class="star">★</span>
                                <span class="star">★</span>
                            </div>
                            <p class="provider-specialty">
                                Estilista canina certificada especialista en todas las razas.
                            </p>
                            <div class="provider-experience">3 años de experiencia</div>
                        </div>
                    }
                </div>
            </section>

            <!-- Reviews Section -->
            <section class="content-section">
