@model TbPedido

@{
    ViewData["Title"] = "Detalles del Pedido - PetCare";
    var nombrePrestador = ViewBag.NombrePrestador;

    // Sanitización de datos para JavaScript
    var telefonoCliente = Model.IdUsuarioDueñoNavigation?.Telefono?.Replace("'", "\\'") ?? "";
    var nombreCliente = $"{Model.IdUsuarioDueñoNavigation?.PrimerNombre} {Model.IdUsuarioDueñoNavigation?.PrimerApellido}".Replace("'", "\\'").Trim();
    var correoCliente = Model.IdUsuarioDueñoNavigation?.Correo ?? "No disponible";
}

<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewData["Title"]</title>
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" rel="stylesheet">

    <style>
        * {
            margin: 0;
            padding: 0;
            box-sizing: border-box;
        }

        body, html {
            height: 100%;
            overflow-x: hidden;
        }

        body {
            font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
            background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
            min-height: 100vh;
            display: flex;
        }

        /* SIDEBAR */
        .sidebar {
            width: 280px;
            background: white;
            box-shadow: 2px 0 20px rgba(0, 0, 0, 0.1);
            position: fixed;
            height: 100vh;
            left: 0;
            top: 0;
            z-index: 1000;
            overflow-y: auto;
            transition: transform 0.3s ease;
            border-top-right-radius: 25px;
            border-bottom-right-radius: 25px;
        }

        .sidebar-content {
            padding: 30px 20px;
            height: 100%;
            display: flex;
            flex-direction: column;
        }

        .logo-section {
            text-align: center;
            margin-bottom: 25px;
            padding-bottom: 20px;
            border-bottom: 2px solid #f0f0f0;
        }

        .logo-icon {
            width: 60px;
            height: 60px;
            background: linear-gradient(135deg, #4CAF50, #2E7D32);
            border-radius: 15px;
            display: flex;
            align-items: center;
            justify-content: center;
            margin: 0 auto 15px;
            box-shadow: 0 5px 15px rgba(76, 175, 80, 0.3);
        }

        .logo-icon i {
            color: white;
            font-size: 28px;
        }

        .logo-text {
            font-size: 20px;
            font-weight: 700;
            color: #333;
        }

        .user-welcome {
            padding: 20px;
            background: linear-gradient(135deg, #667eea, #764ba2);
            border-radius: 12px;
            color: white;
            text-align: center;
            margin-bottom: 25px;
        }

        .user-welcome p {
            font-size: 13px;
            opacity: 0.9;
            margin-bottom: 5px;
        }

        .user-welcome h3 {
            font-size: 17px;
            font-weight: 600;
        }

        .nav-menu {
            flex: 1;
            margin-bottom: 20px;
        }

        .nav-item {
            display: flex;
            align-items: center;
            padding: 12px 15px;
            margin-bottom: 8px;
            color: #666;
            text-decoration: none;
            border-radius: 12px;
            transition: all 0.3s ease;
            font-size: 15px;
        }

        .nav-item:hover {
            background: #f0f8ff;
            color: #667eea;
            transform: translateX(3px);
        }

        .nav-item.active {
            background: linear-gradient(135deg, #667eea, #764ba2);
            color: white;
        }

        .nav-icon {
            width: 40px;
            height: 40px;
            display: flex;
            align-items: center;
            justify-content: center;
            margin-right: 12px;
            background: #f8f9fa;
            border-radius: 10px;
            font-size: 16px;
        }

        .nav-item.active .nav-icon {
            background: rgba(255, 255, 255, 0.2);
            color: white;
        }

        .logout-section {
            padding-top: 20px;
            border-top: 2px solid #f0f0f0;
        }

        .btn-logout {
            display: flex;
            align-items: center;
            justify-content: center;
            gap: 8px;
            padding: 12px;
            color: #dc3545;
            text-decoration: none;
            border-radius: 12px;
            transition: all 0.3s ease;
            font-size: 14px;
            border: 2px solid #f8d7da;
            background: transparent;
            width: 100%;
            cursor: pointer;
        }

        .btn-logout:hover {
            background: #f8d7da;
            transform: translateY(-2px);
        }

        /* Main Content */
        .main-content {
            margin-left: 280px;
            flex: 1;
            padding: 40px;
            overflow-y: auto;
        }

        .back-button {
            display: inline-flex;
            align-items: center;
            gap: 10px;
            padding: 12px 24px;
            background: white;
            color: #667eea;
            text-decoration: none;
            border-radius: 12px;
            font-weight: 600;
            margin-bottom: 25px;
            transition: all 0.3s ease;
            box-shadow: 0 4px 15px rgba(0, 0, 0, 0.1);
        }

        .back-button:hover {
            transform: translateY(-2px);
            box-shadow: 0 6px 20px rgba(0, 0, 0, 0.15);
        }

        .header {
            background: rgba(255, 255, 255, 0.98);
            padding: 30px;
            border-radius: 20px;
            margin-bottom: 30px;
            box-shadow: 0 10px 30px rgba(0, 0, 0, 0.1);
            display: flex;
            justify-content: space-between;
            align-items: center;
        }

        .header-info h1 {
            font-size: 32px;
            font-weight: 700;
            color: #2d3748;
            margin-bottom: 10px;
        }

        .header-info p {
            color: #718096;
            font-size: 16px;
        }

        .estado-badge {
            padding: 12px 24px;
            border-radius: 20px;
            font-size: 14px;
            font-weight: 600;
            text-transform: uppercase;
        }

        .estado-pendiente {
            background: #fef3c7;
            color: #92400e;
        }

        .estado-pagado-pendiente {
            background: #fef3c7;
            color: #92400e;
        }

        .estado-aceptado {
            background: #dbeafe;
            color: #1e40af;
        }

        .estado-en-proceso {
            background: #dbeafe;
            color: #1e3a8a;
        }

        .estado-finalizado {
            background: #d1fae5;
            color: #065f46;
        }

        .estado-rechazado {
            background: #fee2e2;
            color: #991b1b;
        }

        .estado-pagado {
            background: #d1fae5;
            color: #065f46;
        }

        .details-grid {
            display: grid;
            grid-template-columns: repeat(auto-fit, minmax(400px, 1fr));
            gap: 25px;
            margin-bottom: 25px;
        }

        .detail-card {
            background: white;
            border-radius: 15px;
            padding: 30px;
            box-shadow: 0 4px 20px rgba(0, 0, 0, 0.1);
        }

        .card-header {
            display: flex;
            align-items: center;
            gap: 15px;
            margin-bottom: 25px;
            padding-bottom: 15px;
            border-bottom: 2px solid #f0f0f0;
        }

        .card-icon {
            width: 50px;
            height: 50px;
            background: linear-gradient(135deg, #667eea, #764ba2);
            border-radius: 12px;
            display: flex;
            align-items: center;
            justify-content: center;
            color: white;
            font-size: 22px;
        }

        .card-title {
            font-size: 20px;
            font-weight: 700;
            color: #2d3748;
        }

        .info-row {
            display: flex;
            align-items: start;
            margin-bottom: 20px;
        }

        .info-row:last-child {
            margin-bottom: 0;
        }

        .info-icon {
            width: 40px;
            height: 40px;
            background: #f8f9fa;
            border-radius: 10px;
            display: flex;
            align-items: center;
            justify-content: center;
            color: #667eea;
            font-size: 16px;
            margin-right: 15px;
            flex-shrink: 0;
        }

        .info-content {
            flex: 1;
        }

        .info-label {
            font-size: 12px;
            color: #a0aec0;
            text-transform: uppercase;
            font-weight: 600;
            margin-bottom: 5px;
        }

        .info-value {
            color: #2d3748;
            font-size: 16px;
            font-weight: 500;
            line-height: 1.5;
        }

        .mascota-item {
            display: flex;
            align-items: center;
            gap: 15px;
            padding: 15px;
            background: #f8f9fa;
            border-radius: 12px;
            margin-bottom: 12px;
        }

        .mascota-icon {
            width: 50px;
            height: 50px;
            background: linear-gradient(135deg, #667eea, #764ba2);
            border-radius: 50%;
            display: flex;
            align-items: center;
            justify-content: center;
            color: white;
            font-size: 20px;
        }

        .mascota-info {
            flex: 1;
        }

        .mascota-nombre {
            font-size: 16px;
            font-weight: 600;
            color: #2d3748;
            margin-bottom: 3px;
        }

        .mascota-raza {
            font-size: 14px;
            color: #718096;
        }

        .servicio-item {
            display: flex;
            justify-content: space-between;
            align-items: center;
            padding: 15px;
            background: #f8f9fa;
            border-radius: 12px;
            margin-bottom: 12px;
        }

        .servicio-nombre {
            font-size: 16px;
            font-weight: 600;
            color: #2d3748;
        }

        .servicio-precio {
            font-size: 18px;
            font-weight: 700;
            color: #10b981;
        }

        .total-section {
            background: linear-gradient(135deg, #667eea, #764ba2);
            color: white;
            padding: 25px;
            border-radius: 15px;
            text-align: right;
            margin-top: 20px;
        }

        .total-label {
            font-size: 16px;
            opacity: 0.9;
            margin-bottom: 5px;
        }

        .total-amount {
            font-size: 36px;
            font-weight: 700;
        }

        .btn-contactar {
            display: inline-flex;
            align-items: center;
            justify-content: center;
            gap: 10px;
            padding: 15px 30px;
            background: linear-gradient(135deg, #10b981, #059669);
            color: white;
            text-decoration: none;
            border-radius: 12px;
            font-size: 16px;
            font-weight: 600;
            transition: all 0.3s ease;
            box-shadow: 0 4px 15px rgba(16, 185, 129, 0.3);
            border: none;
            cursor: pointer;
            width: 100%;
            margin-top: 20px;
        }

        .btn-contactar:hover {
            transform: translateY(-2px);
            box-shadow: 0 6px 20px rgba(16, 185, 129, 0.4);
        }

        .btn-contactar:disabled {
            background: #9ca3af;
            cursor: not-allowed;
            transform: none;
        }

        .fecha-destacada {
            background: linear-gradient(135deg, #fef3c7, #fde68a);
            padding: 25px;
            border-radius: 15px;
            margin-bottom: 20px;
        }

        .fecha-destacada-label {
            font-size: 14px;
            color: #92400e;
            font-weight: 600;
            text-transform: uppercase;
            margin-bottom: 10px;
        }

        .fecha-destacada-valor {
            font-size: 24px;
            font-weight: 700;
            color: #78350f;
            margin-bottom: 5px;
        }

        .horario-destacado {
            font-size: 18px;
            color: #92400e;
            font-weight: 600;
        }

        .alert-warning {
            background: #fef3c7;
            border-left: 4px solid #f59e0b;
            padding: 15px;
            border-radius: 8px;
            color: #92400e;
            margin-top: 15px;
            font-size: 14px;
        }

        /* SIDEBAR TOGGLE BUTTON */
        .sidebar-toggle {
            display: none;
            position: fixed;
            bottom: 20px;
            left: 20px;
            width: 50px;
            height: 50px;
            background: linear-gradient(135deg, #667eea, #764ba2);
            color: white;
            border: none;
            border-radius: 50%;
            box-shadow: 0 5px 20px rgba(102, 126, 234, 0.4);
            cursor: pointer;
            z-index: 999;
            font-size: 20px;
        }

        /* RESPONSIVE */
        @@media (max-width: 768px) {
            .sidebar {
                transform: translateX(-100%);
            }

            .sidebar.active {
                transform: translateX(0);
            }

            .main-content {
                margin-left: 0;
                padding: 20px;
            }

            .sidebar-toggle {
                display: flex;
                align-items: center;
                justify-content: center;
            }

            .details-grid {
                grid-template-columns: 1fr;
            }

            .header {
                flex-direction: column;
                align-items: flex-start;
                gap: 15px;
            }
        }
    </style>
</head>
<body>
    <!-- Sidebar -->
    <div class="sidebar" id="sidebar">
        <div class="sidebar-content">
            <div class="logo-section">
                <div class="logo-icon">
                    <i class="fas fa-paw"></i>
                </div>
                <div class="logo-text">PetCare</div>
            </div>

            <div class="user-welcome">
                <p>Bienvenido,</p>
                <h3>@nombrePrestador</h3>
            </div>

            <nav class="nav-menu">
                <a href="@Url.Action("Index", "PedidosPrestador")" class="nav-item active">
                    <div class="nav-icon">
                        <i class="fas fa-shopping-bag"></i>
                    </div>
                    <span>Mis Pedidos</span>
                </a>
                <a href="@Url.Action("Index", "Servicios")" class="nav-item">
                    <div class="nav-icon">
                        <i class="fas fa-home"></i>
                    </div>
                    <span>Mis Servicios</span>
                </a>
                <a href="@Url.Action("EditarPerfil", "Perfil")" class="nav-item">
                    <div class="nav-icon">
                        <i class="fas fa-users"></i>
                    </div>
                    <span>Mi Usuario</span>
                </a>
            </nav>

            <div class="logout-section">
                <a href="@Url.Action("CerrarSesion", "PedidosPrestador")" class="btn-logout">
                    <i class="fas fa-sign-out-alt"></i>
                    <span>Cerrar Sesión</span>
                </a>
            </div>
        </div>
    </div>

    <!-- Main Content -->
    <div class="main-content">
        <a href="@Url.Action("Index", "PedidosPrestador")" class="back-button">
            <i class="fas fa-arrow-left"></i>
            Volver a Mis Pedidos
        </a>

        <div class="header">
            <div class="header-info">
                <h1><i class="fas fa-file-invoice"></i> Pedido #@Model.IdPedido</h1>
                <p>Detalles completos del pedido</p>
            </div>
            <span class="estado-badge estado-@((Model.Estado ?? "pendiente").ToLower().Replace(" ", "-").Replace("(", "").Replace(")", ""))">
                @(Model.Estado ?? "Pendiente")
            </span>
        </div>

        <div class="details-grid">
            <!-- Información del Cliente -->
            <div class="detail-card">
                <div class="card-header">
                    <div class="card-icon">
                        <i class="fas fa-user"></i>
                    </div>
                    <div class="card-title">Información del Cliente</div>
                </div>

                @if (Model.IdUsuarioDueñoNavigation != null)
                {
                    <div class="info-row">
                        <div class="info-icon">
                            <i class="fas fa-user-circle"></i>
                        </div>
                        <div class="info-content">
                            <div class="info-label">Nombre Completo</div>
                            <div class="info-value">
                                @Model.IdUsuarioDueñoNavigation.PrimerNombre
                                @(Model.IdUsuarioDueñoNavigation.SegundoNombre ?? "")
                                @Model.IdUsuarioDueñoNavigation.PrimerApellido
                                @(Model.IdUsuarioDueñoNavigation.SegundoApellido ?? "")
                            </div>
                        </div>
                    </div>

                    <div class="info-row">
                        <div class="info-icon">
                            <i class="fas fa-phone"></i>
                        </div>
                        <div class="info-content">
                            <div class="info-label">Teléfono</div>
                            <div class="info-value">@(Model.IdUsuarioDueñoNavigation.Telefono ?? "No disponible")</div>
                        </div>
                    </div>

                    <div class="info-row">
                        <div class="info-icon">
                            <i class="fas fa-envelope"></i>
                        </div>
                        <div class="info-content">
                            <div class="info-label">Correo Electrónico</div>
                            <div class="info-value">@correoCliente</div>
                        </div>
                    </div>

                    @if (!string.IsNullOrEmpty(telefonoCliente))
                    {
                        <button class="btn-contactar" onclick="contactarCliente()">
                            <i class="fas fa-phone"></i>
                            Contactar al Cliente
                        </button>
                    }
                    else
                    {
                        <button class="btn-contactar" disabled>
                            <i class="fas fa-phone-slash"></i>
                            Teléfono no disponible
                        </button>
                    }
                }
                else
                {
                    <div class="alert-warning">
                        <i class="fas fa-exclamation-triangle"></i>
                        Información del cliente no disponible
                    </div>
                }
            </div>

            <!-- Información del Servicio -->
            <div class="detail-card">
                <div class="card-header">
                    <div class="card-icon">
                        <i class="fas fa-calendar-check"></i>
                    </div>
                    <div class="card-title">Fecha y Hora del Servicio</div>
                </div>

                <div class="fecha-destacada">
                    <div class="fecha-destacada-label">Fecha Programada</div>
                    <div class="fecha-destacada-valor">
                        <i class="fas fa-calendar-alt"></i>
                        @Model.FechaServicio.ToString("dd/MM/yyyy")
                    </div>
                    <div class="horario-destacado">
                        <i class="fas fa-clock"></i>
                        @Model.HoraServicioFrom.ToString("hh\\:mm") - @Model.HoraServicioTo.ToString("hh\\:mm")
                    </div>
                </div>

                @if (Model.IdDireccionNavigation != null)
                {
                    <div class="info-row">
                        <div class="info-icon">
                            <i class="fas fa-map-marker-alt"></i>
                        </div>
                        <div class="info-content">
                            <div class="info-label">Dirección del Servicio</div>
                            <div class="info-value">
                                @Model.IdDireccionNavigation.Direccion<br>
                                @Model.IdDireccionNavigation.Ciudad, @Model.IdDireccionNavigation.Departamento
                            </div>
                        </div>
                    </div>
                }

                <div class="info-row">
                    <div class="info-icon">
                        <i class="fas fa-calendar"></i>
                    </div>
                    <div class="info-content">
                        <div class="info-label">Fecha del Pedido</div>
                        <div class="info-value">@Model.FechaPedido.ToString("dd/MM/yyyy")</div>
                    </div>
                </div>
            </div>

            <!-- Mascotas a Cuidar -->
            <div class="detail-card">
                <div class="card-header">
                    <div class="card-icon">
                        <i class="fas fa-paw"></i>
                    </div>
                    <div class="card-title">Mascotas a Cuidar</div>
                </div>

                @if (Model.TbPedidoMascota != null && Model.TbPedidoMascota.Any())
                {
                    @foreach (var pm in Model.TbPedidoMascota)
                    {
                        if (pm.IdMascotaNavigation != null)
                        {
                            <div class="mascota-item">
                                <div class="mascota-icon">
                                    <i class="fas fa-paw"></i>
                                </div>
                                <div class="mascota-info">
                                    <div class="mascota-nombre">@pm.IdMascotaNavigation.Nombre</div>
                                    <div class="mascota-raza">
                                        @(pm.IdMascotaNavigation.Raza ?? "Sin raza") - @(pm.IdMascotaNavigation.Raza ?? "Sin especie")
                                    </div>
                                </div>
                            </div>
                        }
                    }
                }
                else
                {
                    <div class="alert-warning">
                        <i class="fas fa-exclamation-triangle"></i>
                        No hay mascotas registradas en este pedido
                    </div>
                }
            </div>

            <!-- Servicios Solicitados -->
            <div class="detail-card">
                <div class="card-header">
                    <div class="card-icon">
                        <i class="fas fa-list-check"></i>
                    </div>
                    <div class="card-title">Servicios Solicitados</div>
                </div>

                @if (Model.TbDetallePedidos != null && Model.TbDetallePedidos.Any())
                {
                    @foreach (var detalle in Model.TbDetallePedidos)
                    {
                        if (detalle.IdServicioNavigation != null)
                        {
                            <div class="servicio-item">
                                <div>
                                    <div class="servicio-nombre">@detalle.IdServicioNavigation.Nombre</div>
                                </div>
                                <div class="servicio-precio">
                                    $@(detalle.Subtotal.ToString("N0") ?? "0")
                                </div>
                            </div>
                        }
                    }

                    <div class="total-section">
                        <div class="total-label">Total del Pedido</div>
                        <div class="total-amount">$@(Model.Total.ToString("N0") ?? "0")</div>
                    </div>
                }
                else
                {
                    <div class="alert-warning">
                        <i class="fas fa-exclamation-triangle"></i>
                        No hay servicios registrados en este pedido
                    </div>
                }
            </div>
        </div>
    </div>

    <!-- Botón toggle sidebar móvil -->
    <button class="sidebar-toggle" onclick="toggleSidebar()">
        <i class="fas fa-bars"></i>
    </button>

    <script>
        // Toggle sidebar en móviles
        function toggleSidebar() {
            const sidebar = document.getElementById('sidebar');
            sidebar.classList.toggle('active');
        }

        // Cerrar sidebar al hacer clic fuera
        document.addEventListener('click', function(e) {
            const sidebar = document.getElementById('sidebar');
            const toggle = document.querySelector('.sidebar-toggle');

            if (window.innerWidth <= 768 &&
                !sidebar.contains(e.target) &&
                !toggle.contains(e.target) &&
                sidebar.classList.contains('active')) {
                sidebar.classList.remove('active');
            }
        });

        function contactarCliente() {
            // Datos ya sanitizados desde Razor
            const telefono = '@Html.Raw(telefonoCliente)';
            const nombre = '@Html.Raw(nombreCliente)';
            const idPedido = '@Model.IdPedido';

            // Validación adicional en JavaScript
            if (!telefono || telefono.trim() === '') {
                alert('No hay un número de teléfono disponible para este cliente');
                return;
            }

            // Limpiar el teléfono (solo números)
            const telefonoLimpio = telefono.replace(/\D/g, '');

            if (telefonoLimpio.length < 10) {
                alert('El número de teléfono no tiene un formato válido');
                return;
            }

            // Crear el mensaje para WhatsApp (se codifica automáticamente)
            const mensaje = `Hola ${nombre}, soy el prestador de servicios de PetCare. Me comunico con respecto al pedido #${idPedido}`;
            const mensajeCodificado = encodeURIComponent(mensaje);

            // Abrir WhatsApp (funciona con código de país Colombia +57)
            const urlWhatsApp = `https://wa.me/57${telefonoLimpio}?text=${mensajeCodificado}`;

            // Abrir en nueva ventana
            const ventana = window.open(urlWhatsApp, '_blank');

            if (!ventana) {
