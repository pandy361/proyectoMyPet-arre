@model IEnumerable<TbPedido>

@{
    ViewData["Title"] = "Mis Pedidos - PetCare";
    var nombrePrestador = ViewBag.NombrePrestador;
}

<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewData["Title"]</title>
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" rel="stylesheet">

    <style>
        * {
            margin: 0;
            padding: 0;
            box-sizing: border-box;
        }

        body, html {
            height: 100%;
            overflow-x: hidden;
        }

        body {
            font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
            background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
            min-height: 100vh;
            display: flex;
        }

        /* COMPACT SIDEBAR */
        .sidebar {
            width: 280px;
            background: white;
            box-shadow: 2px 0 20px rgba(0, 0, 0, 0.1);
            position: fixed;
            height: 100vh;
            left: 0;
            top: 0;
            z-index: 1000;
            overflow-y: auto;
            transition: transform 0.3s ease;
            border-top-right-radius: 25px;
            border-bottom-right-radius: 25px;
        }

        .sidebar-content {
            padding: 30px 20px;
            height: 100%;
            display: flex;
            flex-direction: column;
        }

        .logo-section {
            text-align: center;
            margin-bottom: 25px;
            padding-bottom: 20px;
            border-bottom: 2px solid #f0f0f0;
        }

        .logo-icon {
            width: 60px;
            height: 60px;
            background: linear-gradient(135deg, #4CAF50, #2E7D32);
            border-radius: 15px;
            display: flex;
            align-items: center;
            justify-content: center;
            margin: 0 auto 15px;
            box-shadow: 0 5px 15px rgba(76, 175, 80, 0.3);
        }

            .logo-icon i {
                color: white;
                font-size: 28px;
            }

        .logo-text {
            font-size: 20px;
            font-weight: 700;
            color: #333;
        }

        .user-welcome {
            padding: 20px;
            background: linear-gradient(135deg, #667eea, #764ba2);
            border-radius: 12px;
            color: white;
            text-align: center;
            margin-bottom: 25px;
        }

            .user-welcome p {
                font-size: 13px;
                opacity: 0.9;
                margin-bottom: 5px;
            }

            .user-welcome h3 {
                font-size: 17px;
                font-weight: 600;
            }

        .nav-menu {
            flex: 1;
            margin-bottom: 20px;
        }

        .nav-item {
            display: flex;
            align-items: center;
            padding: 12px 15px;
            margin-bottom: 8px;
            color: #666;
            text-decoration: none;
            border-radius: 12px;
            transition: all 0.3s ease;
            font-size: 15px;
        }

            .nav-item:hover {
                background: #f0f8ff;
                color: #667eea;
                transform: translateX(3px);
            }

            .nav-item.active {
                background: linear-gradient(135deg, #667eea, #764ba2);
                color: white;
            }

        .nav-icon {
            width: 40px;
            height: 40px;
            display: flex;
            align-items: center;
            justify-content: center;
            margin-right: 12px;
            background: #f8f9fa;
            border-radius: 10px;
            font-size: 16px;
        }

        .nav-item.active .nav-icon {
            background: rgba(255, 255, 255, 0.2);
            color: white;
        }

        .logout-section {
            padding-top: 20px;
            border-top: 2px solid #f0f0f0;
        }

        .btn-logout {
            display: flex;
            align-items: center;
            justify-content: center;
            gap: 8px;
            padding: 12px;
            color: #dc3545;
            text-decoration: none;
            border-radius: 12px;
            transition: all 0.3s ease;
            font-size: 14px;
            border: 2px solid #f8d7da;
            background: transparent;
            width: 100%;
            cursor: pointer;
        }

            .btn-logout:hover {
                background: #f8d7da;
                transform: translateY(-2px);
            }

        /* Main Content */
        .main-content {
            margin-left: 280px;
            flex: 1;
            padding: 40px;
            overflow-y: auto;
        }

        .header {
            background: rgba(255, 255, 255, 0.98);
            padding: 30px;
            border-radius: 20px;
            margin-bottom: 30px;
            box-shadow: 0 10px 30px rgba(0, 0, 0, 0.1);
        }

            .header h1 {
                font-size: 32px;
                font-weight: 700;
                color: #2d3748;
                margin-bottom: 10px;
            }

            .header p {
                color: #718096;
                font-size: 16px;
            }

        /* Pedidos Grid */
        .pedidos-grid {
            display: grid;
            grid-template-columns: repeat(auto-fill, minmax(380px, 1fr));
            gap: 25px;
        }

        .pedido-card {
            background: white;
            border-radius: 15px;
            padding: 30px;
            box-shadow: 0 4px 20px rgba(0, 0, 0, 0.1);
            transition: all 0.3s ease;
        }

            .pedido-card:hover {
                transform: translateY(-5px);
                box-shadow: 0 8px 30px rgba(0, 0, 0, 0.15);
            }

        .pedido-header {
            display: flex;
            justify-content: space-between;
            align-items: start;
            margin-bottom: 20px;
            padding-bottom: 15px;
            border-bottom: 2px solid #f0f0f0;
        }

        .pedido-id {
            font-size: 14px;
            color: #a0aec0;
            font-weight: 600;
        }

        .estado-badge {
            padding: 8px 16px;
            border-radius: 20px;
            font-size: 12px;
            font-weight: 600;
            text-transform: uppercase;
        }

        .estado-pendiente {
            background: #fef3c7;
            color: #92400e;
        }

        .estado-aceptado {
            background: #dbeafe;
            color: #1e40af;
        }

        .estado-en-proceso {
            background: #dbeafe;
            color: #1e3a8a;
        }

        .estado-finalizado {
            background: #d1fae5;
            color: #065f46;
        }

        .estado-rechazado {
            background: #fee2e2;
            color: #991b1b;
        }

        .info-section {
            margin-bottom: 15px;
        }

        .info-label {
            font-size: 12px;
            color: #a0aec0;
            text-transform: uppercase;
            font-weight: 600;
            margin-bottom: 8px;
        }

        .info-value {
            color: #2d3748;
            font-size: 15px;
            display: flex;
            align-items: center;
            gap: 10px;
            font-weight: 500;
        }

            .info-value i {
                color: #667eea;
                width: 18px;
            }

        .mascota-tag {
            display: inline-block;
            background: #dbeafe;
            color: #1e40af;
            padding: 6px 14px;
            border-radius: 15px;
            font-size: 13px;
            margin-right: 5px;
            margin-bottom: 5px;
            font-weight: 500;
        }

        .servicio-tag {
            display: inline-block;
            background: #fce7f3;
            color: #be185d;
            padding: 6px 14px;
            border-radius: 15px;
            font-size: 13px;
            margin-right: 5px;
            margin-bottom: 5px;
            font-weight: 500;
        }

        .fecha-servicio {
            background: #f8f9fa;
            padding: 15px;
            border-radius: 10px;
            margin: 15px 0;
            line-height: 1.8;
        }

            .fecha-servicio strong {
                color: #667eea;
            }

        .pedido-actions {
            display: flex;
            gap: 10px;
            margin-top: 20px;
            padding-top: 20px;
            border-top: 2px solid #f0f0f0;
        }

        .btn {
            flex: 1;
            padding: 12px;
            border: none;
            border-radius: 10px;
            font-size: 14px;
            font-weight: 600;
            cursor: pointer;
            transition: all 0.3s ease;
            text-align: center;
            display: flex;
            align-items: center;
            justify-content: center;
            gap: 6px;
        }

        .btn-aceptar {
            background: #10b981;
            color: white;
        }

            .btn-aceptar:hover {
                background: #059669;
                transform: translateY(-2px);
                box-shadow: 0 4px 12px rgba(16, 185, 129, 0.3);
            }

        .btn-rechazar {
            background: #ef4444;
            color: white;
        }

            .btn-rechazar:hover {
                background: #dc2626;
                transform: translateY(-2px);
                box-shadow: 0 4px 12px rgba(239, 68, 68, 0.3);
            }

        .btn-finalizar {
            background: linear-gradient(135deg, #667eea, #764ba2);
            color: white;
        }

            .btn-finalizar:hover {
                transform: translateY(-2px);
                box-shadow: 0 4px 12px rgba(102, 126, 234, 0.3);
            }

        .btn-detalles {
            background: #6b7280;
            color: white;
        }

            .btn-detalles:hover {
                background: #4b5563;
                transform: translateY(-2px);
            }

        .total-pedido {
            font-size: 28px;
            font-weight: 700;
            color: #10b981;
            text-align: right;
            margin-top: 15px;
        }

        .no-pedidos {
            text-align: center;
            padding: 80px 20px;
            background: white;
            border-radius: 20px;
            box-shadow: 0 10px 30px rgba(0, 0, 0, 0.1);
        }

            .no-pedidos i {
                font-size: 80px;
                color: #cbd5e0;
                margin-bottom: 25px;
            }

            .no-pedidos h2 {
                color: #2d3748;
                margin-bottom: 12px;
                font-size: 24px;
            }

            .no-pedidos p {
                color: #718096;
                font-size: 16px;
            }

        /* SIDEBAR TOGGLE BUTTON */
        .sidebar-toggle {
            display: none;
            position: fixed;
            bottom: 20px;
            left: 20px;
            width: 50px;
            height: 50px;
            background: linear-gradient(135deg, #667eea, #764ba2);
            color: white;
            border: none;
            border-radius: 50%;
            box-shadow: 0 5px 20px rgba(102, 126, 234, 0.4);
            cursor: pointer;
            z-index: 999;
            font-size: 20px;
        }

        /* RESPONSIVE */
        @@media (max-width: 768px) {
            .sidebar

        {
            transform: translateX(-100%);
        }

        .sidebar.active {
            transform: translateX(0);
        }

        .main-content {
            margin-left: 0;
            padding: 20px;
        }

        .sidebar-toggle {
            display: flex;
            align-items: center;
            justify-content: center;
        }

        .pedidos-grid {
            grid-template-columns: 1fr;
        }

        }
    </style>
</head>
<body>
    <!-- Sidebar -->
    <div class="sidebar" id="sidebar">
        <div class="sidebar-content">
            <div class="logo-section">
                <div class="logo-icon">
                    <i class="fas fa-paw"></i>
                </div>
                <div class="logo-text">PetCare</div>
            </div>

            <div class="user-welcome">
                <p>Bienvenido,</p>
                <h3>@nombrePrestador</h3>
            </div>

            <nav class="nav-menu">
                <a href="@Url.Action("Index", "PedidosPrestador")" class="nav-item active">
                    <div class="nav-icon">
                        <i class="fas fa-shopping-bag"></i>
                    </div>
                    <span>Mis Pedidos</span>
                </a>
                <a href="@Url.Action("Index", "Servicios")" class="nav-item">
                    <div class="nav-icon">
                        <i class="fas fa-home"></i>
                    </div>
                    <span>Mis Servicios</span>
                </a>
               
                <a href="@Url.Action("EditarPerfil", "Perfil")" class="nav-item">
                    <div class="nav-icon">
                        <i class="fas fa-users"></i>
                    </div>
                    <span>Mi Usuario</span>
                </a>
            </nav>

            <div class="logout-section">
                <a href="@Url.Action("CerrarSesion", "PedidosPrestador")" class="btn-logout">
                    <i class="fas fa-sign-out-alt"></i>
                    <span>Cerrar Sesión</span>
                </a>
            </div>
        </div>
    </div>

    <!-- Main Content -->
    <div class="main-content">
        <div class="header">
            <h1><i class="fas fa-clipboard-list"></i> Gestión de Pedidos</h1>
            <p>Administra y gestiona todas las solicitudes de servicio</p>
        </div>

        @if (Model != null && Model.Any())
        {
            <div class="pedidos-grid">
                @foreach (var pedido in Model)
                {
                    <div class="pedido-card">
                        <div class="pedido-header">
                            <div class="pedido-id">PEDIDO #@pedido.IdPedido</div>
                            <span class="estado-badge estado-@pedido.Estado?.ToLower().Replace(" ", "-")">
                                @pedido.Estado
                            </span>
                        </div>

                        <div class="info-section">
                            <div class="info-label">Cliente</div>
                            <div class="info-value">
                                <i class="fas fa-user"></i>
                                @pedido.IdUsuarioDueñoNavigation.PrimerNombre @pedido.IdUsuarioDueñoNavigation.PrimerApellido
                            </div>
                        </div>

                        <div class="info-section">
                            <div class="info-label">Dirección de Servicio</div>
                            <div class="info-value">
                                <i class="fas fa-map-marker-alt"></i>
                                <span>@pedido.IdDireccionNavigation.Direccion, @pedido.IdDireccionNavigation.Ciudad</span>
                            </div>
                        </div>

                        <div class="fecha-servicio">
                            <strong>Fecha:</strong> @pedido.FechaServicio.ToString("dd/MM/yyyy")<br>
                            <strong>Horario:</strong> @pedido.HoraServicioFrom.ToString("hh\\:mm") - @pedido.HoraServicioTo.ToString("hh\\:mm")
                        </div>

                        <div class="info-section">
                            <div class="info-label">Mascotas</div>
                            <div>
                                @foreach (var pm in pedido.TbPedidoMascota)
                                {
                                    <span class="mascota-tag">
                                        <i class="fas fa-paw"></i> @pm.IdMascotaNavigation.Nombre
                                    </span>
                                }
                            </div>
                        </div>

                        <div class="info-section">
                            <div class="info-label">Servicios Solicitados</div>
                            <div>
                                @foreach (var detalle in pedido.TbDetallePedidos)
                                {
                                    <span class="servicio-tag">
                                        @detalle.IdServicioNavigation.Nombre
                                    </span>
                                }
                            </div>
                        </div>

                        <div class="total-pedido">
                            $@pedido.Total.ToString("N0")
                        </div>

                        <div class="pedido-actions">
                            @if (pedido.Estado == "Pendiente")
                            {
                                <button class="btn btn-aceptar" onclick="cambiarEstado(@pedido.IdPedido, 'Aceptado')">
                                    <i class="fas fa-check"></i> Aceptar
                                </button>
                                <button class="btn btn-rechazar" onclick="cambiarEstado(@pedido.IdPedido, 'Rechazado')">
                                    <i class="fas fa-times"></i> Rechazar
                                </button>
                            }
                            else if (pedido.Estado == "Aceptado" || pedido.Estado == "En Proceso")
                            {
                                <button class="btn btn-finalizar" onclick="cambiarEstado(@pedido.IdPedido, 'Finalizado')">
                                    <i class="fas fa-check-circle"></i> Finalizar
                                </button>
                            }
                            <button class="btn btn-detalles" onclick="verDetalles(@pedido.IdPedido)">
                                <i class="fas fa-eye"></i> Detalles
                            </button>
                        </div>
                    </div>
                }
            </div>
        }
        else
        {
            <div class="no-pedidos">
                <i class="fas fa-inbox"></i>
                <h2>No tienes pedidos asignados</h2>
                <p>Cuando recibas solicitudes de servicio, aparecerán aquí</p>
            </div>
        }
    </div>

    <!-- Botón toggle sidebar móvil -->
    <button class="sidebar-toggle" onclick="toggleSidebar()">
        <i class="fas fa-bars"></i>
    </button>

    <script>
        // Toggle sidebar en móviles
        function toggleSidebar() {
            const sidebar = document.getElementById('sidebar');
            sidebar.classList.toggle('active');
        }

        // Cerrar sidebar al hacer clic fuera
        document.addEventListener('click', function(e) {
            const sidebar = document.getElementById('sidebar');
            const toggle = document.querySelector('.sidebar-toggle');

            if (window.innerWidth <= 768 &&
                !sidebar.contains(e.target) &&
                !toggle.contains(e.target) &&
                sidebar.classList.contains('active')) {
                sidebar.classList.remove('active');
            }
        });

        function cambiarEstado(idPedido, nuevoEstado) {
            if (!confirm(`¿Estás seguro de cambiar el estado a "${nuevoEstado}"?`)) {
                return;
            }

            fetch('@Url.Action("CambiarEstado", "PedidosPrestador")', {
                method: 'POST',
                headers: {
                    'Content-Type': 'application/x-www-form-urlencoded',
                },
                body: `idPedido=${idPedido}&nuevoEstado=${encodeURIComponent(nuevoEstado)}`
            })
            .then(response => response.json())
            .then(data => {
                if (data.success) {
                    alert('Estado actualizado correctamente');
                    location.reload();
                } else {
                    alert('Error: ' + data.message);
                }
            })
            .catch(error => {
                alert('Error al actualizar el estado');
                console.error('Error:', error);
            });
        }

        function verDetalles(idPedido) {
            window.location.href = '@Url.Action("Detalles", "PedidosPrestador")/' + idPedido;
        }
    </script>
</body>
</html>