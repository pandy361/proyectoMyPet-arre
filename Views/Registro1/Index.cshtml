@{
    ViewData["Title"] = "Registro - PetCare";
    Layout = "_Layout";
}
@model proyecto_mejoradoMy_pet.Models.RegistroCompleteViewModel
@Html.AntiForgeryToken()

<link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css" rel="stylesheet">

<div class="registro-container">
    <!-- SIDEBAR -->
    <div class="sidebar">
        <div class="logo">
            <div class="logo-icon">
                <i class="fas fa-paw"></i>
            </div>
            <h2>PetCare</h2>
        </div>

        <div class="wizard-progress" id="sidebar-progress">
            <!-- Pasos se generarán dinámicamente -->
        </div>

        <div class="nav-icons">
            <div class="nav-icon active">
                <i class="fas fa-home"><a href ="@Url.Action("Privacy", "Home")"></a></i>
            </div>
            <div class="nav-icon">
                <i class="fas fa-user"> <a href="@Url.Action("Login", "Autenticacion")"></a></i>
            </div>
        </div>
    </div>

    <!-- MAIN CONTENT -->
    <div class="main-content">
        <div class="wizard-container">
            <div class="wizard-header">
                <h1 id="wizard-title">Registro Inteligente</h1>
                <p id="wizard-subtitle">Completa tu registro según tus necesidades</p>
                <div class="progress-bar">
                    <div class="progress" id="progress-bar" style="width: 16.67%"></div>
                </div>
            </div>

            <form id="registration-form">
                <!-- PASO 1: INFORMACIÓN PERSONAL + ROLES -->
                <div class="wizard-step active" id="step-1">
                    <h2 style="margin-bottom: 30px; color: #333;">
                        <i class="fas fa-user" style="margin-right: 10px; color: #2196F3;"></i>
                        Información Personal y Roles
                    </h2>

                    <div class="form-row">
                        <div class="form-group">
                            <label for="usuario">Usuario *</label>
                            <input type="text" id="usuario" name="usuario" class="form-control" required>
                            <div class="error-message"></div>
                        </div>
                        <div class="form-group">
                            <label for="email">Email *</label>
                            <input type="email" id="email" name="email" class="form-control" required>
                            <div class="error-message"></div>
                        </div>
                    </div>

                    <div class="form-row">
                        <div class="form-group">
                            <label for="password">Contraseña *</label>
                            <input type="password" id="password" name="password" class="form-control" required minlength="8">
                            <div class="error-message"></div>
                        </div>
                        <div class="form-group">
                            <label for="confirm-password">Confirmar Contraseña *</label>
                            <input type="password" id="confirm-password" name="confirm-password" class="form-control" required>
                            <div class="error-message"></div>
                        </div>
                    </div>

                    <div class="form-row">
                        <div class="form-group">
                            <label for="primer-nombre">Primer Nombre *</label>
                            <input type="text" id="primer-nombre" name="primer-nombre" class="form-control" required>
                        </div>
                        <div class="form-group">
                            <label for="segundo-nombre">Segundo Nombre</label>
                            <input type="text" id="segundo-nombre" name="segundo-nombre" class="form-control">
                        </div>
                    </div>

                    <div class="form-row">
                        <div class="form-group">
                            <label for="primer-apellido">Primer Apellido *</label>
                            <input type="text" id="primer-apellido" name="primer-apellido" class="form-control" required>
                        </div>
                        <div class="form-group">
                            <label for="segundo-apellido">Segundo Apellido</label>
                            <input type="text" id="segundo-apellido" name="segundo-apellido" class="form-control">
                        </div>
                    </div>

                    <div class="form-row">
                        <div class="form-group">
                            <label for="telefono">Teléfono *</label>
                            <input type="tel" id="telefono" name="telefono" class="form-control" required>
                        </div>
                        <div class="form-group">
                            <label for="documento">Documento de Identidad *</label>
                            <input type="text" id="documento" name="documento" class="form-control" required>
                        </div>
                    </div>

                    <div class="form-row">
                        <div class="form-group">
                            <label for="fecha-nacimiento">Fecha de Nacimiento *</label>
                            <input type="date" id="fecha-nacimiento" name="fecha-nacimiento" class="form-control" required>
                        </div>
                    </div>

                    <h3 style="margin: 30px 0 20px 0; color: #333;">Selecciona tu(s) rol(es): *</h3>
                    <div class="role-selection">
                        <div class="role-card" onclick="toggleRole(this, 'prestador')">
                            <i class="fas fa-user-tie"></i>
                            <h3>Prestador</h3>
                            <p>Ofrecer servicios para mascotas</p>
                            <input type="checkbox" name="roles[]" value="2" style="display: none;">
                        </div>
                        <div class="role-card" onclick="toggleRole(this, 'dueno')">
                            <i class="fas fa-heart"></i>
                            <h3>Dueño</h3>
                            <p>Solicitar servicios para mis mascotas</p>
                            <input type="checkbox" name="roles[]" value="1" style="display: none;">
                        </div>
                    </div>
                    <div class="error-message" id="roles-error"></div>
                </div>

                <!-- PASO 2: DIRECCIONES -->
                <div class="wizard-step" id="step-2">
                    <h2 style="margin-bottom: 30px; color: #333;">
                        <i class="fas fa-map-marker-alt" style="margin-right: 10px; color: #2196F3;"></i>
                        Direcciones
                    </h2>

                    <div id="direcciones-container">
                        <!-- Direcciones se generan dinámicamente -->
                    </div>

                    <button type="button" class="btn btn-add" onclick="agregarDireccion()">
                        <i class="fas fa-plus"></i> Agregar Dirección
                    </button>
                </div>

                <!-- PASO 3: INFORMACIÓN PROFESIONAL -->
                <div class="wizard-step" id="step-3">
                    <h2 style="margin-bottom: 30px; color: #333;">
                        <i class="fas fa-briefcase" style="margin-right: 10px; color: #2196F3;"></i>
                        Información Profesional
                    </h2>

                    <div class="form-row">
                        <div class="form-group">
                            <label for="resumen">Resumen Profesional *</label>
                            <textarea id="resumen" name="resumen" class="form-control" placeholder="Describe brevemente tu experiencia..." required></textarea>
                        </div>
                    </div>

                    <div class="form-row">
                        <div class="form-group">
                            <label for="habilidades">Habilidades *</label>
                            <textarea id="habilidades" name="habilidades" class="form-control" placeholder="Ej: Cuidado de perros, peluquería canina..." required></textarea>
                        </div>
                    </div>

                    <div class="form-row">
                        <div class="form-group">
                            <label for="experiencia">Experiencia Detallada</label>
                            <textarea id="experiencia" name="experiencia" class="form-control" placeholder="Detalla tu experiencia profesional..."></textarea>
                        </div>
                    </div>

                    <div class="form-row">
                        <div class="form-group">
                            <label for="anos-experiencia">Años de Experiencia *</label>
                            <select id="anos-experiencia" name="anos-experiencia" class="form-control" required>
                                <option value="">Seleccionar...</option>
                                <option value="0">Menos de 1 año</option>
                                <option value="1">1 año</option>
                                <option value="2">2 años</option>
                                <option value="3">3 años</option>
                                <option value="4">4 años</option>
                                <option value="5">5+ años</option>
                                <option value="10">10+ años</option>
                            </select>
                        </div>
                    </div>
                    <!-- ✅ AGREGAR ESTO EN EL PASO 3, DESPUÉS DE AÑOS DE EXPERIENCIA -->
                    <div class="form-row">
                        <div class="form-group">
                            <label>Servicios que Ofreces *</label>
                            <div style="display: grid; grid-template-columns: repeat(2, 1fr); gap: 12px; margin-top: 10px;">
                                <label style="display: flex; align-items: center; gap: 8px; padding: 12px; background: #f8f9fa; border-radius: 10px; cursor: pointer; transition: all 0.3s ease;">
                                    <input type="checkbox" name="serviciosOfrecidos" value="Paseo de Mascotas" style="width: 18px; height: 18px; accent-color: #2196F3;">
                                    <span style="font-size: 14px;">🐕 Paseo de Mascotas</span>
                                </label>
                                <label style="display: flex; align-items: center; gap: 8px; padding: 12px; background: #f8f9fa; border-radius: 10px; cursor: pointer; transition: all 0.3s ease;">
                                    <input type="checkbox" name="serviciosOfrecidos" value="Peluquería" style="width: 18px; height: 18px; accent-color: #2196F3;">
                                    <span style="font-size: 14px;">✂️ Peluquería</span>
                                </label>
                                <label style="display: flex; align-items: center; gap: 8px; padding: 12px; background: #f8f9fa; border-radius: 10px; cursor: pointer; transition: all 0.3s ease;">
                                    <input type="checkbox" name="serviciosOfrecidos" value="Hospedaje" style="width: 18px; height: 18px; accent-color: #2196F3;">
                                    <span style="font-size: 14px;">🏠 Hospedaje</span>
                                </label>
                                <label style="display: flex; align-items: center; gap: 8px; padding: 12px; background: #f8f9fa; border-radius: 10px; cursor: pointer; transition: all 0.3s ease;">
                                    <input type="checkbox" name="serviciosOfrecidos" value="Entrenamiento" style="width: 18px; height: 18px; accent-color: #2196F3;">
                                    <span style="font-size: 14px;">🎓 Entrenamiento</span>
                                </label>
                                <label style="display: flex; align-items: center; gap: 8px; padding: 12px; background: #f8f9fa; border-radius: 10px; cursor: pointer; transition: all 0.3s ease;">
                                    <input type="checkbox" name="serviciosOfrecidos" value="Guardería" style="width: 18px; height: 18px; accent-color: #2196F3;">
                                    <span style="font-size: 14px;">🌸 Guardería</span>
                                </label>
                            </div>
                            <div class="error-message" id="error-serviciosOfrecidos" style="display: none;"></div>
                        </div>
                    </div>

                    <style>
                        /* Efecto hover para los checkboxes de servicios */
                        label:has(input[name="serviciosOfrecidos"]):hover {
                            background: #e3f2fd !important;
                            transform: translateY(-2px);
                            box-shadow: 0 4px 8px rgba(0,0,0,0.1);
                        }

                        label:has(input[name="serviciosOfrecidos"]:checked) {
                            background: linear-gradient(135deg, #e3f2fd, #bbdefb) !important;
                            border: 2px solid #2196F3;
                        }
                    </style>
                </div>

                <!-- PASO 4: SERVICIOS -->
                <div class="wizard-step" id="step-4">
                    <h2 style="margin-bottom: 30px; color: #333;">
                        <i class="fas fa-tasks" style="margin-right: 10px; color: #2196F3;"></i>
                        Servicios que Ofreces
                    </h2>

                    <div id="servicios-container">
                        <!-- Servicios se generan dinámicamente -->
                    </div>

                    <button type="button" class="btn btn-add" onclick="agregarServicio()">
                        <i class="fas fa-plus"></i> Agregar Servicio
                    </button>
                </div>

                <!-- PASO 5: DISPONIBILIDAD -->
                <div class="wizard-step" id="step-5">
                    <h2 style="margin-bottom: 30px; color: #333;">
                        <i class="fas fa-calendar-alt" style="margin-right: 10px; color: #2196F3;"></i>
                        Disponibilidad
                    </h2>

                    <div id="disponibilidad-container">
                        <!-- Disponibilidad se genera dinámicamente -->
                    </div>

                    <button type="button" class="btn btn-add" onclick="agregarDisponibilidad()">
                        <i class="fas fa-plus"></i> Agregar Horario
                    </button>
                </div>

                <!-- PASO 6: MASCOTAS -->
                <div class="wizard-step" id="step-6">
                    <h2 style="margin-bottom: 30px; color: #333;">
                        <i class="fas fa-paw" style="margin-right: 10px; color: #2196F3;"></i>
                        Mis Mascotas
                    </h2>
                    <p style="margin-bottom: 30px; color: #666;">Puedes agregar tus mascotas ahora o hacerlo más tarde desde tu perfil</p>

                    <div id="mascotas-container">
                        <!-- Mascotas se generan dinámicamente -->
                    </div>

                    <button type="button" class="btn btn-add" onclick="agregarMascota()">
                        <i class="fas fa-plus"></i> Agregar Mascota
                    </button>
                </div>

                <!-- PASO FINAL: CONFIRMACIÓN -->
                <div class="wizard-step" id="step-final">
                    <div class="success-container">
                        <div class="success-icon">
                            <i class="fas fa-check"></i>
                        </div>
                        <h2>¡Registro Completado!</h2>
                        <p>Tu cuenta ha sido creada exitosamente</p>
                        <button type="button" class="btn btn-primary" onclick="window.location.href='/Home'">
                            Ir al Inicio
                        </button>
                    </div>
                </div>
            </form>

            <!-- NAVIGATION BUTTONS -->
            <div class="wizard-buttons" id="navigation-buttons">
                <button type="button" class="btn btn-secondary" id="prev-btn" onclick="previousStep()" disabled>
                    <i class="fas fa-arrow-left"></i> Anterior
                </button>
                <button type="button" class="btn btn-primary" id="next-btn" onclick="nextStep()">
                    Siguiente <i class="fas fa-arrow-right"></i>
                </button>
            </div>
        </div>
    </div>
</div>

<style>
    .registro-container {
        font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
        background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
        min-height: 100vh;
        display: flex;
        margin: 0;
        padding: 0;
    }

    /* SIDEBAR */
    .sidebar {
        width: 280px;
        background: rgba(255, 255, 255, 0.95);
        backdrop-filter: blur(10px);
        border-radius: 0 25px 25px 0;
        padding: 20px;
        box-shadow: 0 10px 30px rgba(0, 0, 0, 0.1);
        transition: all 0.3s ease;
    }

    .logo {
        text-align: center;
        margin-bottom: 30px;
    }

    .logo-icon {
        width: 60px;
        height: 60px;
        background: linear-gradient(135deg, #4CAF50, #45a049);
        border-radius: 15px;
        display: flex;
        align-items: center;
        justify-content: center;
        margin: 0 auto 10px;
        color: white;
        font-size: 24px;
    }

    .logo h2 {
        color: #333;
        font-size: 20px;
    }

    .wizard-progress {
        margin-bottom: 30px;
    }

    .step {
        display: flex;
        align-items: center;
        margin-bottom: 20px;
        position: relative;
        opacity: 0.5;
        transition: all 0.3s ease;
    }

        .step.visible {
            opacity: 1;
        }

        .step::after {
            content: '';
            position: absolute;
            left: 15px;
            top: 35px;
            width: 2px;
            height: 30px;
            background: #ddd;
            transition: all 0.3s ease;
        }

        .step:last-child::after,
        .step.hidden + .step::after,
        .step.hidden::after {
            display: none;
        }

        .step.completed::after {
            background: #4CAF50;
        }

        .step.active::after {
            background: #2196F3;
        }

        .step.hidden {
            display: none;
        }

    .step-number {
        width: 30px;
        height: 30px;
        border-radius: 50%;
        background: #ddd;
        color: white;
        display: flex;
        align-items: center;
        justify-content: center;
        font-size: 14px;
        margin-right: 12px;
        z-index: 1;
        position: relative;
        transition: all 0.3s ease;
    }

    .step.completed .step-number {
        background: #4CAF50;
    }

    .step.active .step-number {
        background: #2196F3;
        animation: pulse 2s infinite;
    }

    @@keyframes pulse {
        0%

    {
        box-shadow: 0 0 0 0 rgba(33, 150, 243, 0.7);
    }

    70% {
        box-shadow: 0 0 0 10px rgba(33, 150, 243, 0);
    }

    100% {
        box-shadow: 0 0 0 0 rgba(33, 150, 243, 0);
    }

    }

    .step-title {
        font-size: 13px;
        color: #666;
        line-height: 1.2;
    }

    .step.active .step-title {
        color: #2196F3;
        font-weight: 600;
    }

    .step.completed .step-title {
        color: #4CAF50;
    }

    /* NAV ICONS */
    .nav-icons {
        margin-top: auto;
    }

    .nav-icon {
        width: 50px;
        height: 50px;
        border-radius: 12px;
        background: #f5f5f5;
        display: flex;
        align-items: center;
        justify-content: center;
        margin-bottom: 10px;
        cursor: pointer;
        transition: all 0.3s ease;
    }

        .nav-icon:hover {
            background: #e3f2fd;
            color: #2196F3;
        }

        .nav-icon.active {
            background: #2196F3;
            color: white;
        }

    /* MAIN CONTENT */
    .main-content {
        flex: 1;
        padding: 40px;
        display: flex;
        justify-content: center;
        align-items: center;
    }

    .wizard-container {
        background: white;
        border-radius: 20px;
        padding: 40px;
        box-shadow: 0 20px 40px rgba(0, 0, 0, 0.1);
        width: 100%;
        max-width: 900px;
        min-height: 600px;
    }

    .wizard-header {
        text-align: center;
        margin-bottom: 40px;
    }

        .wizard-header h1 {
            color: #333;
            font-size: 28px;
            margin-bottom: 10px;
        }

        .wizard-header p {
            color: #666;
            font-size: 16px;
        }

    .progress-bar {
        height: 6px;
        background: #f0f0f0;
        border-radius: 3px;
        margin-bottom: 30px;
        overflow: hidden;
    }

    .progress {
        height: 100%;
        background: linear-gradient(90deg, #4CAF50, #45a049);
        border-radius: 3px;
        transition: width 0.5s ease;
    }

    /* FORM STYLES */
    .form-row {
        display: flex;
        gap: 20px;
        margin-bottom: 25px;
    }

    .form-group {
        flex: 1;
    }

        .form-group label {
            display: block;
            margin-bottom: 8px;
            color: #333;
            font-weight: 500;
        }

        .form-group input,
        .form-group select,
        .form-group textarea,
        .form-control {
            width: 100%;
            padding: 12px 16px;
            border: 2px solid #e1e1e1;
            border-radius: 10px;
            font-size: 14px;
            transition: all 0.3s ease;
            box-sizing: border-box;
        }

            .form-group input:focus,
            .form-group select:focus,
            .form-group textarea:focus,
            .form-control:focus {
                border-color: #2196F3;
                outline: none;
                box-shadow: 0 0 0 3px rgba(33, 150, 243, 0.1);
            }

        .form-group textarea {
            resize: vertical;
            min-height: 100px;
        }

    /* ROLE SELECTION */
    .role-selection {
        display: flex;
        gap: 15px;
        margin-bottom: 30px;
    }

    .role-card {
        flex: 1;
        padding: 20px;
        border: 2px solid #e1e1e1;
        border-radius: 15px;
        text-align: center;
        cursor: pointer;
        transition: all 0.3s ease;
        position: relative;
    }

        .role-card:hover {
            border-color: #2196F3;
            background: #f8faff;
        }

        .role-card.selected {
            border-color: #4CAF50;
            background: #f1f8e9;
        }

        .role-card i {
            font-size: 30px;
            margin-bottom: 10px;
            color: #666;
        }

        .role-card.selected i {
            color: #4CAF50;
        }

        .role-card h3 {
            color: #333;
            margin-bottom: 5px;
        }

        .role-card p {
            color: #666;
            font-size: 13px;
        }

    /* DYNAMIC ITEMS */
    .dynamic-item {
        border: 1px solid #e1e1e1;
        border-radius: 15px;
        padding: 25px;
        margin-bottom: 20px;
        position: relative;
        background: #fafafa;
    }

        .dynamic-item h4 {
            color: #333;
            margin-bottom: 15px;
        }

    .remove-btn {
        background: #f44336;
        color: white;
        border: none;
        border-radius: 50%;
        width: 30px;
        height: 30px;
        cursor: pointer;
        display: flex;
        align-items: center;
        justify-content: center;
        transition: all 0.3s ease;
    }

        .remove-btn:hover {
            background: #d32f2f;
            transform: scale(1.1);
        }

    /* BUTTONS */
    .wizard-buttons {
        display: flex;
        justify-content: space-between;
        margin-top: 40px;
    }

    .btn {
        padding: 12px 30px;
        border: none;
        border-radius: 10px;
        font-size: 16px;
        font-weight: 500;
        cursor: pointer;
        transition: all 0.3s ease;
        display: flex;
        align-items: center;
        gap: 8px;
    }

        .btn:disabled {
            opacity: 0.5;
            cursor: not-allowed;
        }

    .btn-primary {
        background: linear-gradient(135deg, #2196F3, #1976D2);
        color: white;
    }

        .btn-primary:hover:not(:disabled) {
            transform: translateY(-2px);
            box-shadow: 0 8px 20px rgba(33, 150, 243, 0.3);
        }

    .btn-secondary {
        background: #f5f5f5;
        color: #666;
    }

        .btn-secondary:hover {
            background: #e0e0e0;
        }

    .btn-success {
        background: linear-gradient(135deg, #4CAF50, #45a049);
        color: white;
    }

        .btn-success:hover:not(:disabled) {
            transform: translateY(-2px);
            box-shadow: 0 8px 20px rgba(76, 175, 80, 0.3);
        }

    .btn-add {
        background: #e3f2fd;
        color: #2196F3;
        border: 1px solid #2196F3;
        margin-bottom: 20px;
    }

        .btn-add:hover {
            background: #2196F3;
            color: white;
        }

    /* HIDDEN STEPS */
    .wizard-step {
        display: none;
    }

        .wizard-step.active {
            display: block;
            animation: fadeIn 0.4s ease;
        }

    @@keyframes fadeIn {
        from

    {
        opacity: 0;
        transform: translateY(20px);
    }

    to {
        opacity: 1;
        transform: translateY(0);
    }

    }

    /* VALIDATION STYLES */
    .form-group.error input,
    .form-group.error select,
    .form-group.error textarea {
        border-color: #f44336;
        background-color: #fff5f5;
    }

    .error-message {
        color: #f44336;
        font-size: 12px;
        margin-top: 5px;
        min-height: 16px;
    }

    /* SUCCESS MESSAGE */
    .success-container {
        text-align: center;
        padding: 50px 20px;
    }

    .success-icon {
        width: 80px;
        height: 80px;
        background: #4CAF50;
        border-radius: 50%;
        display: flex;
        align-items: center;
        justify-content: center;
